<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.louishotelmanagement.controller.XemChiTietHoaDonController"
            prefWidth="900" prefHeight="650"
            stylesheets="@../css/xem-chi-tiet-hoa-don.css">
    <children>
        <VBox spacing="15" prefWidth="900" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
              AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10" styleClass="main-container">

            <GridPane hgap="20" vgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="20"/>
                    <ColumnConstraints percentWidth="30"/>
                    <ColumnConstraints percentWidth="20"/>
                    <ColumnConstraints percentWidth="30"/>
                </columnConstraints>
                <children>
                    <Label text="Mã hóa đơn:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="bold-label"/>
                    <Label fx:id="lblMaHD" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Ngày lập:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <Label fx:id="lblNgayLap" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Ngày checkout:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <Label fx:id="lblNgayCheckout" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Khách hàng:" GridPane.rowIndex="0" GridPane.columnIndex="2" styleClass="bold-label"/>
                    <Label fx:id="lblTenKH" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                    <Label text="Phương thức:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                    <Label fx:id="lblPhuongThuc" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

                    <Label text="Trạng thái:" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
                    <Label fx:id="lblTrangThai" GridPane.rowIndex="2" GridPane.columnIndex="3" styleClass="blue-text"/>
                </children>
            </GridPane>

            <Separator />

            <GridPane hgap="20" vgap="8">
                <columnConstraints>
                    <ColumnConstraints percentWidth="20"/>
                    <ColumnConstraints percentWidth="30"/>
                    <ColumnConstraints percentWidth="20"/>
                    <ColumnConstraints percentWidth="30"/>
                </columnConstraints>
                <children>
                    <Label text="Giảm giá Voucher:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="green-text"/>
                    <Label fx:id="lblGiamGiaMa" GridPane.rowIndex="0" GridPane.columnIndex="1" text="0 ₫"/>

                    <Label text="Giảm giá hạng KH:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="green-text"/>
                    <Label fx:id="lblGiamGiaHang" GridPane.rowIndex="1" GridPane.columnIndex="1" text="0 ₫"/>

                    <Label text="Thuế VAT (10%):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <Label fx:id="lblVAT" GridPane.rowIndex="2" GridPane.columnIndex="1" text="0 ₫"/>

                    <Label text="Phạt nhận trễ:" GridPane.rowIndex="0" GridPane.columnIndex="2" styleClass="red-text"/>
                    <Label fx:id="lblPhatNhanTre" GridPane.rowIndex="0" GridPane.columnIndex="3" text="0 ₫"/>

                    <Label text="Phạt trả sớm:" GridPane.rowIndex="1" GridPane.columnIndex="2" styleClass="red-text"/>
                    <Label fx:id="lblPhatTraSom" GridPane.rowIndex="1" GridPane.columnIndex="3" text="0 ₫"/>

                    <Label text="Phạt trả trễ:" GridPane.rowIndex="2" GridPane.columnIndex="2" styleClass="red-text"/>
                    <Label fx:id="lblPhatTraTre" GridPane.rowIndex="2" GridPane.columnIndex="3" text="0 ₫"/>

                    <Label text="TỔNG THANH TOÁN:" GridPane.rowIndex="3" GridPane.columnIndex="2" styleClass="total-label"/>
                    <Label fx:id="lblTongTien" GridPane.rowIndex="3" GridPane.columnIndex="3" styleClass="total-value"/>
                </children>
            </GridPane>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Lọc danh sách:" styleClass="filter-label" />
                <ComboBox fx:id="cbFilter" prefWidth="200" promptText="Tất cả"/>
            </HBox>

            <TableView fx:id="tableChiTiet" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colTenDV" text="Tên dịch vụ / Phòng" prefWidth="350" />
                    <TableColumn fx:id="colSoLuong" text="Số lượng" prefWidth="120" />
                    <TableColumn fx:id="colDonGia" text="Đơn giá" prefWidth="180" />
                    <TableColumn fx:id="colThanhTien" text="Thành tiền" prefWidth="200" />
                </columns>
            </TableView>

            <HBox alignment="CENTER_RIGHT">
                <Button fx:id="btnClose" text="Đóng cửa sổ" prefWidth="120" styleClass="close-button" />
            </HBox>

        </VBox>
    </children>
</AnchorPane>