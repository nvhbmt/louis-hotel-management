<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.louishotelmanagement.controller.XemChiTietHoaDonController"
            prefWidth="900" prefHeight="600">

    <children>

        <VBox spacing="15" prefWidth="900" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
              AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">

            <!-- ====== TIÊU ĐỀ ====== -->
            <Label text="CHI TIẾT HÓA ĐƠN" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

            <!-- ====== THÔNG TIN HÓA ĐƠN ====== -->
            <GridPane hgap="20" vgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="20"/>
                    <ColumnConstraints percentWidth="30"/>
                    <ColumnConstraints percentWidth="20"/>
                    <ColumnConstraints percentWidth="30"/>
                </columnConstraints>

                <children>
                    <Label text="Mã hóa đơn:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <Label fx:id="lblMaHD" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Ngày lập:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <Label fx:id="lblNgayLap" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Ngày checkout:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <Label fx:id="lblNgayCheckout" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Khách hàng:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                    <Label fx:id="lblTenKH" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                    <Label text="Phương thức:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                    <Label fx:id="lblPhuongThuc" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

                    <Label text="Trạng thái:" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
                    <Label fx:id="lblTrangThai" GridPane.rowIndex="2" GridPane.columnIndex="3"/>
                </children>
            </GridPane>

            <!-- ====== TỔNG TIỀN ====== -->
            <GridPane hgap="20" vgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="20"/>
                    <ColumnConstraints percentWidth="30"/>
                    <ColumnConstraints percentWidth="20"/>
                    <ColumnConstraints percentWidth="30"/>
                </columnConstraints>

                <children>
                    <Label text="Tổng tiền:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <Label fx:id="lblTongTien" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Tổng giảm giá:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <Label fx:id="lblTongGiamGia" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="VAT:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                    <Label fx:id="lblVAT" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                    <Label text="Tiền phạt:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                    <Label fx:id="lblTienPhat" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
                </children>
            </GridPane>

            <!-- ====== BỘ LỌC ====== -->
            <HBox spacing="10">
                <Label text="Lọc theo:" style="-fx-font-size: 15px;" />
                <ComboBox fx:id="cbFilter"
                          prefWidth="200"
                          promptText="Tất cả / Phòng / Dịch vụ"/>
            </HBox>

            <!-- ====== BẢNG CHI TIẾT ====== -->
            <TableView fx:id="tableChiTiet" prefHeight="350">
                <columns>
                    <TableColumn fx:id="colTenDV" text="Tên dịch vụ / Phòng" prefWidth="300" />
                    <TableColumn fx:id="colSoLuong" text="Số lượng" prefWidth="120" />
                    <TableColumn fx:id="colDonGia" text="Đơn giá" prefWidth="150" />
                    <TableColumn fx:id="colThanhTien" text="Thành tiền" prefWidth="150" />
                </columns>
            </TableView>

            <!-- ====== NÚT ĐÓNG ====== -->
            <Button fx:id="btnClose" text="Đóng" prefWidth="100" style="-fx-font-size: 15px;" />

        </VBox>

    </children>
</AnchorPane>
