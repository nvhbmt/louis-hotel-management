<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.louishotelmanagement.controller.ChiTietPhongTrongPhieuController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="lblMaPhieu" text="Chi Tiết Phòng Đặt" alignment="CENTER" maxWidth="Infinity">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
    </Label>

    <SplitPane dividerPositions="0.6" VBox.vgrow="ALWAYS">
        <VBox alignment="TOP_CENTER">
            <Label text="Danh Sách Phòng Trong Phiếu" style="-fx-font-weight: bold; -fx-padding: 0 0 5 0;" />
            <TableView fx:id="tblChiTietPhong" VBox.vgrow="ALWAYS" prefHeight="400.0">
                <columns>
                    <TableColumn fx:id="colTang" minWidth="60.0" prefWidth="80.0" text="Tầng" />
                    <TableColumn fx:id="colMaPhong" minWidth="80.0" prefWidth="120.0" text="Mã Phòng" />
                    <TableColumn fx:id="colTenLoaiPhong" minWidth="100.0" prefWidth="250.0" text="Loại Phòng" />
                    <TableColumn fx:id="colGia" minWidth="100.0" prefWidth="150.0" text="Giá / Đêm" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>

        <VBox alignment="TOP_LEFT" spacing="15.0" style="-fx-padding: 10;">
            <Label text="Chi Tiết Phòng" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #007bff;" />

            <GridPane hgap="10" vgap="10">
                <Label text="Mã Phòng:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;" />
                <Label fx:id="lblChiTietMaPhong" text="-" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                <Label text="Tầng:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;" />
                <Label fx:id="lblChiTietTang" text="-" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                <Label text="Trạng Thái:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: bold;" />
                <Label fx:id="lblChiTietTrangThai" text="-" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                <Label text="Loại Phòng:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight: bold;" />
                <Label fx:id="lblChiTietLoaiPhong" text="-" GridPane.rowIndex="3" GridPane.columnIndex="1" />

                <Label text="Giá Đơn Vị:" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-font-weight: bold;" />
                <Label fx:id="lblChiTietGia" text="-" GridPane.rowIndex="4" GridPane.columnIndex="1" />
            </GridPane>

            <Label text="Mô Tả Chi Tiết:" style="-fx-font-weight: bold; -fx-padding: 10 0 0 0;" />
            <TextArea fx:id="txtChiTietMoTa" editable="false" wrapText="true" VBox.vgrow="ALWAYS" minHeight="150.0"/>

        </VBox>
    </SplitPane>

    <Button mnemonicParsing="false" onAction="#handleClose" text="Đóng" />
</VBox>