<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox alignment="TOP_CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.louishotelmanagement.controller.ChiTietPhongTrongPhieuController"
      stylesheets="@../css/chi-tiet-phong-trong-phieu.css" prefWidth="900" prefHeight="650">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="lblMaPhieu" text="Chi Tiết Phòng Đặt" styleClass="title-label"/>

    <SplitPane dividerPositions="0.6" VBox.vgrow="ALWAYS">
        <VBox alignment="TOP_CENTER">
            <Label text="Danh Sách Phòng Trong Phiếu" styleClass="section-header"/>
            <TableView fx:id="tblChiTietPhong" VBox.vgrow="ALWAYS" prefHeight="400.0">
                <columns>
                    <TableColumn fx:id="colTang" text="Tầng"/>
                    <TableColumn fx:id="colMaPhong" text="Mã Phòng"/>
                    <TableColumn fx:id="colTenLoaiPhong" text="Loại Phòng"/>
                    <TableColumn fx:id="colGia" text="Giá / Đêm"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>

        <VBox spacing="15.0" styleClass="detail-section">
            <Label text="Chi Tiết Phòng" styleClass="detail-header"/>

            <GridPane hgap="10" vgap="10">
                <Label text="Mã Phòng:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="field-label"/>
                <Label fx:id="lblChiTietMaPhong" text="-" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Tầng:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="field-label"/>
                <Label fx:id="lblChiTietTang" text="-" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Trạng Thái:" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="field-label"/>
                <Label fx:id="lblChiTietTrangThai" text="-" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Loại Phòng:" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="field-label"/>
                <Label fx:id="lblChiTietLoaiPhong" text="-" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Giá Đơn Vị:" GridPane.rowIndex="4" GridPane.columnIndex="0" styleClass="field-label"/>
                <Label fx:id="lblChiTietGia" text="-" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </GridPane>

            <Label text="Mô Tả Chi Tiết:" styleClass="description-label"/>
            <TextArea fx:id="txtChiTietMoTa" editable="false" wrapText="true" VBox.vgrow="ALWAYS" minHeight="150.0"/>

        </VBox>
    </SplitPane>

    <Button mnemonicParsing="false" onAction="#handleClose" text="Đóng"/>
</VBox>