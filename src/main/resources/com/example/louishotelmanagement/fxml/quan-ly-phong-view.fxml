<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.louishotelmanagement.controller.QuanLyPhongController">
    <center>
        <!-- Main Content Area -->
        <VBox prefHeight="800.0" prefWidth="950.0" spacing="20.0" style="-fx-background-color: #f8f9fa; -fx-padding: 30;">
            <!-- Header -->
            <VBox prefHeight="44.0" prefWidth="918.0" spacing="5.0">
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <VBox prefHeight="53.0" prefWidth="487.0">
                     <children>
                            <Label fx:id="lblsoPhongTrong" style="-fx-font-size: 28px; -fx-font-weight: bold;" text="Quản Lý Phòng" textFill="#2c3e50" />
                            <Label prefHeight="20.0" prefWidth="450.0" style="-fx-font-size: 14px;" text="Quản lý thông tin và trạng thái các phòng trong khách sạn" textFill="#7f8c8d" />
                     </children>
                  </VBox>
                  <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="431.0" spacing="16.0">
                     <children>
                            <Button fx:id="btnThemPhong" alignment="CENTER_RIGHT" contentDisplay="RIGHT" onAction="#handleThemPhong" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10 20;" text="➕ Thêm Phòng" />
                     </children>
                  </HBox>
               </children>
            </HBox>
            <VBox.margin>
               <Insets bottom="40.0" />
            </VBox.margin>
            </VBox>
         <GridPane hgap="20.0">
           <columnConstraints>
               <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
               <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
             <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
             <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
           </columnConstraints>
           <rowConstraints>
             <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
           </rowConstraints>
            <children>
               <VBox prefHeight="200.0" prefWidth="100.0" style="-fx-border-width: 1; -fx-border-color: black; -fx-padding: 10; -fx-border-radius: 8;">
                  <children>
                     <Label text="Tổng số phòng">
                        <font>
                           <Font size="16.0" />
                        </font>
                     </Label>
                     <Label text="24">
                        <font>
                           <Font name="System Bold" size="24.0" />
                        </font>
                     </Label>
                  </children>
               </VBox>
               <VBox layoutX="10.0" layoutY="-27.0" prefHeight="200.0" prefWidth="100.0" style="-fx-border-width: 1; -fx-border-color: black; -fx-padding: 10; -fx-border-radius: 8;" GridPane.columnIndex="1">
                  <children>
                     <Label fx:id="lblSoPhongTrong" text="Phòng trống">
                        <font>
                           <Font size="16.0" />
                        </font>
                     </Label>
                     <Label text="24">
                        <font>
                           <Font name="System Bold" size="24.0" />
                        </font>
                     </Label>
                  </children>
               </VBox>
               <VBox layoutX="238.0" layoutY="-27.0" prefHeight="200.0" prefWidth="100.0" style="-fx-border-width: 1; -fx-border-color: black; -fx-padding: 10; -fx-border-radius: 8;" GridPane.columnIndex="2">
                  <children>
                     <Label fx:id="lblSoPhongSuDung" text="Phòng sử dụng">
                        <font>
                           <Font size="16.0" />
                        </font>
                     </Label>
                     <Label text="24">
                        <font>
                           <Font name="System Bold" size="24.0" />
                        </font>
                     </Label>
                  </children>
               </VBox>
               <VBox layoutX="10.0" layoutY="-27.0" prefHeight="200.0" prefWidth="100.0" style="-fx-border-width: 1; -fx-border-color: black; -fx-padding: 10; -fx-border-radius: 8;" GridPane.columnIndex="3">
                  <children>
                     <Label fx:id="lblSoPhongBaoTri" text="Phòng bảo trì ">
                        <font>
                           <Font size="16.0" />
                        </font>
                     </Label>
                     <Label text="24">
                        <font>
                           <Font name="System Bold" size="24.0" />
                        </font>
                     </Label>
                  </children>
               </VBox>
            </children>
            <VBox.margin>
               <Insets bottom="20.0" />
            </VBox.margin>
         </GridPane>

            <!-- Control Panel -->
            <HBox alignment="CENTER_LEFT" spacing="15.0" />

            <!-- Search and Filter Panel -->
            <HBox alignment="CENTER_LEFT" spacing="15.0">
                <TextField fx:id="txtTimKiem" onKeyReleased="#handleTimKiem" prefHeight="33.0" prefWidth="239.0" promptText="Nhập mã phòng hoặc tầng..." style="-fx-background-radius: 5; -fx-padding: 8 12;" />
                <ComboBox fx:id="cbTang" onAction="#handleLocTang" prefHeight="41.0" prefWidth="138.0" promptText="Tất cả tầng" style="-fx-background-radius: 5; -fx-padding: 8 12;" />
                <ComboBox fx:id="cbTrangThai" onAction="#handleLocTrangThai" prefHeight="41.0" prefWidth="165.0" promptText="Tất cả trạng thái" style="-fx-background-radius: 5; -fx-padding: 8 12;" />
                <ComboBox fx:id="cbLocLoaiPhong" maxHeight="-Infinity" maxWidth="-Infinity" onAction="#handleLocLoaiPhong" promptText="Tất cả loại phòng" style="-fx-background-radius: 5; -fx-padding: 8 12;" />
                <Button fx:id="btnLamMoi" onAction="#handleLamMoi" prefHeight="37.0" prefWidth="121.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10 20;" text="🔄 Làm Mới" />
            </HBox>

            <!-- Table View -->
            <VBox prefHeight="561.0" prefWidth="890.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-padding: 10;">
                <TableView fx:id="tableViewPhong" prefHeight="576.0" prefWidth="850.0" style="-fx-background-color: white;">
                    <columns>
                        <TableColumn fx:id="colMaPhong" prefWidth="80.00000381469727" text="Mã Phòng" />
                        <TableColumn fx:id="colTang" prefWidth="70.0" text="Tầng" />
                        <TableColumn fx:id="colTrangThai" prefWidth="97.99998474121094" text="Trạng Thái" />
                        <TableColumn fx:id="colTenLoaiPhong" prefWidth="101.33331298828125" text="Loại Phòng" />
                        <TableColumn fx:id="colMoTa" prefWidth="240.66671752929688" text="Mô Tả" />
                        <TableColumn fx:id="colDonGia" minWidth="0.0" prefWidth="99.3333740234375" text="Đơn Giá" />
                  <TableColumn fx:id="colThaoTac" minWidth="0.0" prefWidth="140.0" text="Thao tác" />
                    </columns>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
                </TableView>
            </VBox>

            <!-- Status Bar -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label fx:id="lblTrangThai" style="-fx-font-size: 12px;" text="Sẵn sàng" textFill="#7f8c8d" />
                <Separator orientation="VERTICAL" />
                <Label fx:id="lblSoLuong" style="-fx-font-size: 12px;" text="Tổng số phòng: 0" textFill="#7f8c8d" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
