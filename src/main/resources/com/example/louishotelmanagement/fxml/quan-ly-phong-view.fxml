<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.louishotelmanagement.controller.QuanLyPhongController">
    <center>
        <!-- Main Content Area -->
        <VBox spacing="20.0" style="-fx-background-color: #f8f9fa; -fx-padding: 30;">
            <!-- Header -->
            <VBox spacing="5.0">
                <Label style="-fx-font-size: 28px; -fx-font-weight: bold;" text="Quản Lý Phòng" textFill="#2c3e50"/>
                <Label style="-fx-font-size: 14px;" text="Quản lý thông tin và trạng thái các phòng trong khách sạn"
                       textFill="#7f8c8d"/>
            </VBox>

            <!-- Control Panel -->
            <HBox alignment="CENTER_LEFT" spacing="15.0">
                <Button fx:id="btnThemPhong" onAction="#handleThemPhong"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10 20;"
                        text="➕ Thêm Phòng"/>
                <Button fx:id="btnSuaPhong" onAction="#handleSuaPhong"
                        style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10 20;"
                        text="✏ Sửa Phòng"/>
                <Button fx:id="btnXoaPhong" onAction="#handleXoaPhong"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10 20;"
                        text="🗑 Xóa Phòng"/>
                <Button fx:id="btnLamMoi" onAction="#handleLamMoi"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10 20;"
                        text="🔄 Làm Mới"/>
            </HBox>

            <!-- Search and Filter Panel -->
            <HBox alignment="CENTER_LEFT" spacing="15.0">
                <Label style="-fx-font-weight: bold;" text="Tìm kiếm:"/>
                <TextField fx:id="txtTimKiem" onKeyReleased="#handleTimKiem" promptText="Nhập mã phòng hoặc tầng..."
                           style="-fx-background-radius: 5; -fx-padding: 8 12;"/>
                <Label style="-fx-font-weight: bold;" text="Tầng:"/>
                <ComboBox fx:id="cbTang" onAction="#handleLocTang" promptText="Tất cả tầng"
                          style="-fx-background-radius: 5; -fx-padding: 8 12;"/>
                <Label style="-fx-font-weight: bold;" text="Trạng thái:"/>
                <ComboBox fx:id="cbTrangThai" onAction="#handleLocTrangThai" promptText="Tất cả trạng thái"
                          style="-fx-background-radius: 5; -fx-padding: 8 12;"/>
                <Label style="-fx-font-weight: bold;" text="Loại phòng:"/>
                <ComboBox fx:id="cbLocLoaiPhong" onAction="#handleLocLoaiPhong" promptText="Tất cả loại phòng"
                          style="-fx-background-radius: 5; -fx-padding: 8 12;"/>
            </HBox>

            <!-- Table View -->
            <VBox spacing="10.0"
                  style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-padding: 20;">
                <TableView fx:id="tableViewPhong" style="-fx-background-color: white;">
                    <columns>
                        <TableColumn fx:id="colMaPhong" prefWidth="100" text="Mã Phòng"/>
                        <TableColumn fx:id="colTang" prefWidth="80" text="Tầng"/>
                        <TableColumn fx:id="colTrangThai" prefWidth="120" text="Trạng Thái"/>
                        <TableColumn fx:id="colMoTa" prefWidth="200" text="Mô Tả"/>
                        <TableColumn fx:id="colTenLoaiPhong" prefWidth="150" text="Loại Phòng"/>
                        <TableColumn fx:id="colDonGia" prefWidth="120" text="Đơn Giá"/>
                    </columns>
                </TableView>
            </VBox>

            <!-- Status Bar -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label fx:id="lblTrangThai" style="-fx-font-size: 12px;" text="Sẵn sàng" textFill="#7f8c8d"/>
                <Separator orientation="VERTICAL"/>
                <Label fx:id="lblSoLuong" style="-fx-font-size: 12px;" text="Tổng số phòng: 0" textFill="#7f8c8d"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
