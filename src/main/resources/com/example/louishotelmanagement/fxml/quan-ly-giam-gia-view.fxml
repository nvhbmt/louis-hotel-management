<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="rootPane" stylesheets="@../css/main.css, @../css/quan-ly-khach-hang.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.louishotelmanagement.controller.QuanLyGiamGiaController">
    <center>
        <VBox alignment="TOP_CENTER" prefHeight="800.0" prefWidth="950.0" spacing="15.0" styleClass="main-content" VBox.vgrow="ALWAYS">
            <children>
                <VBox prefHeight="44.0" prefWidth="918.0" spacing="5.0">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                    <children>
                        <HBox prefHeight="22.0" prefWidth="890.0" HBox.hgrow="ALWAYS">
                            <children>
                                <VBox prefHeight="53.0" prefWidth="487.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label styleClass="main-header" text="Quản Lý Mã Giảm Giá" />
                                        <Label prefHeight="20.0" prefWidth="450.0" styleClass="main-subtitle" text="Quản lý các mã giảm giá và khuyến mãi trong khách sạn" />
                                    </children>
                                </VBox>
                                <Region HBox.hgrow="ALWAYS" />
                                <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="5.0">
                                    <children>
                                        <Button onAction="#handleThemMaGiamGia" mnemonicParsing="false" prefHeight="37.0" prefWidth="144.0" styleClass="btn-them-khach-hang" text="➕ Thêm mã giảm giá">
                                            <font>
                                                <Font name="System Bold" size="12.0" />
                                            </font>
                                        </Button>
                                    </children>
                                </HBox>
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <GridPane alignment="TOP_CENTER" hgap="20" prefHeight="150.0" prefWidth="890.0" HBox.hgrow="ALWAYS" VBox.vgrow="NEVER">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="25" />
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="25" />
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="25" />
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="25" />
                    </columnConstraints>

                    <rowConstraints>
                        <RowConstraints maxHeight="150" minHeight="100" prefHeight="120" valignment="TOP" vgrow="ALWAYS" />
                    </rowConstraints>

                    <children>
                        <!-- Ô 1: Số mã giảm giá -->
                        <VBox styleClass="stat-box" GridPane.columnIndex="0" GridPane.hgrow="ALWAYS">
                            <HBox alignment="CENTER_LEFT" spacing="15">
                                <VBox alignment="CENTER_LEFT" spacing="10" HBox.hgrow="ALWAYS">
                                    <Label styleClass="stat-title" text="Tổng số mã" />
                                    <Label fx:id="lblTongSoMaGiamGia" styleClass="stat-number" text="69" />
                                </VBox>
                                <ImageView fitHeight="45" fitWidth="45" preserveRatio="true">
                                    <image>
                                        <Image url="@../image/coupons.png" />
                                    </image>
                                </ImageView>
                            </HBox>
                        </VBox>

                        <!-- Ô 2: Đang hoạt động -->
                        <VBox styleClass="stat-box" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS">
                            <HBox alignment="CENTER_LEFT" spacing="15">
                                <VBox alignment="CENTER_LEFT" spacing="15" HBox.hgrow="ALWAYS">
                                    <Label styleClass="stat-title" text="Đang diễn ra" />
                                    <Label fx:id="lblSoMaDangHoatDong" styleClass="stat-number" text="15" />
                                </VBox>
                                <ImageView fitHeight="45" fitWidth="45" preserveRatio="true">
                                    <image>
                                        <Image url="@../image/green-circle.png" />
                                    </image>
                                </ImageView>
                            </HBox>
                        </VBox>

                        <!-- Ô 3: Đã hết hạn -->
                        <VBox styleClass="stat-box" GridPane.columnIndex="2" GridPane.hgrow="ALWAYS">
                            <HBox alignment="CENTER_LEFT" spacing="15">
                                <VBox alignment="CENTER_LEFT" spacing="15" HBox.hgrow="ALWAYS">
                                    <Label styleClass="stat-title" text="Đã hết hạn" />
                                    <Label fx:id="lblSoMaHetHan" styleClass="stat-number" text="14" />
                                </VBox>
                                <ImageView fitHeight="45" fitWidth="45" preserveRatio="true">
                                    <image>
                                        <Image url="@../image/cross.png" />
                                    </image>
                                </ImageView>
                            </HBox>
                        </VBox>

                        <!-- Ô 4: Chưa bắt đầu -->
                        <VBox styleClass="stat-box" GridPane.columnIndex="3" GridPane.hgrow="ALWAYS">
                            <HBox alignment="CENTER_LEFT" spacing="15">
                                <VBox alignment="CENTER_LEFT" spacing="15" HBox.hgrow="ALWAYS">
                                    <Label styleClass="stat-title" text="Chưa bắt đầu" />
                                    <Label fx:id="lblSoMaChuaBatDau" styleClass="stat-number" text="10" />
                                </VBox>
                                <ImageView fitHeight="45" fitWidth="45" preserveRatio="true">
                                    <image>
                                        <Image url="@../image/wait.png" />
                                    </image>
                                </ImageView>
                            </HBox>
                        </VBox>
                    </children>
                </GridPane>

                <HBox alignment="CENTER_LEFT" spacing="15.0" HBox.hgrow="ALWAYS">
                    <children>
                        <TextField fx:id="txtTimKiem" maxWidth="Infinity" prefHeight="41.0" prefWidth="200.0" promptText="Nhập mã giảm giá..." style="-fx-border-color: #B0C4DE; -fx-border-radius: 15; -fx-background-radius: 15;" styleClass="form-field" HBox.hgrow="ALWAYS" />

                        <ComboBox fx:id="cbKieuGiamGia" onAction="#handleLocKieuGiamGia" maxWidth="Infinity" prefHeight="41.0" prefWidth="150.0" promptText="Tất cả kiểu giảm giá" style="-fx-background-radius: 15; -fx-background-color: #F5F9FF; -fx-border-color: #B0C4DE; -fx-border-radius: 15;" styleClass="hover-effect" HBox.hgrow="ALWAYS" />

                        <ComboBox fx:id="cbTrangThai" onAction="#handleLocTrangThai" maxWidth="Infinity" prefHeight="41.0" prefWidth="150.0" promptText="Tất cả trạng thái" style="-fx-background-radius: 15; -fx-background-color: #F5F9FF; -fx-border-color: #B0C4DE; -fx-border-radius: 15;" styleClass="hover-effect" HBox.hgrow="ALWAYS" />

                        <Button fx:id="btnLamMoi" onAction="#handleLamMoi" maxWidth="Infinity" mnemonicParsing="false" prefHeight="37.0" prefWidth="150.0" styleClass="btn-lam-moi" text="🔄 Làm Mới" HBox.hgrow="ALWAYS">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>

                <VBox prefHeight="561.0" prefWidth="890.0" styleClass="table-container" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                    <children>
                        <TableView fx:id="tableViewMaGiamGia" prefHeight="576.0" prefWidth="850.0" VBox.vgrow="ALWAYS">
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                            <columns>
                                <TableColumn fx:id="colMaGG" maxWidth="Infinity" minWidth="80.0" prefWidth="98.0" text="Mã Giảm Giá" />
                                <TableColumn fx:id="colCode" maxWidth="Infinity" minWidth="120.0" prefWidth="143.0" text="Code" />
                                <TableColumn fx:id="colGiamGia" maxWidth="Infinity" minWidth="100.0" prefWidth="127.0" text="Giá Trị" />
                                <TableColumn fx:id="colKieuGiamGia" maxWidth="Infinity" minWidth="97.0" prefWidth="97.0" text="Kiểu" />
                                <TableColumn fx:id="colNgayBatDau" maxWidth="Infinity" prefWidth="86.0" text="Ngày Bắt Đầu" />
                                <TableColumn fx:id="colNgayKetThuc" maxWidth="Infinity" minWidth="89.0" prefWidth="107.0" text="Ngày Kết Thúc" />
                                <TableColumn fx:id="colTongTienToiThieu" maxWidth="Infinity" minWidth="89.0" prefWidth="108.0" text="Tổng Tiền Tối Thiểu" />
                                <TableColumn fx:id="colTrangThai" maxWidth="Infinity" minWidth="125.0" prefWidth="103.0" text="Trạng Thái" />
                                <TableColumn fx:id="colMoTa" maxWidth="Infinity" minWidth="175.0" prefWidth="303.0" text="Mô Tả" />
                                <TableColumn fx:id="colThaoTac" maxWidth="Infinity" minWidth="150.0" prefWidth="203.0" text="Thao Tác" />
                            </columns>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </VBox>
    </center>
</BorderPane>
