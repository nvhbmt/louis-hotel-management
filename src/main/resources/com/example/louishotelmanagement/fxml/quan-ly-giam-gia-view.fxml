<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="rootPane" stylesheets="@../css/main.css, @../css/quan-ly-khach-hang.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.louishotelmanagement.controller.QuanLyGiamGiaController">
    <center>
        <VBox alignment="TOP_CENTER" prefHeight="800.0" prefWidth="950.0" spacing="20.0" styleClass="main-content" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <!-- Header Section -->
                <HBox alignment="CENTER_LEFT" spacing="20.0" HBox.hgrow="ALWAYS">
                    <children>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Label styleClass="main-header" text="Quản Lý Mã Giảm Giá">
                                    <font>
                                        <Font name="System Bold" size="24.0" />
                                    </font>
                                </Label>
                                <Label styleClass="main-subtitle" text="Quản lý và theo dõi các mã giảm giá của dịch vụ khách sạn">
                                    <font>
                                        <Font size="13.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnThemMaGiamGia" mnemonicParsing="false" prefHeight="40.0" prefWidth="170.0" styleClass="btn-them-khach-hang" text="➕ Thêm Mã Giảm Giá">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>

                <!-- Search and Filter Section -->
                <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="filter-container" HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </padding>
                    <children>
                        <!-- Search Field -->
                        <TextField fx:id="txtTimKiem" prefHeight="45.0" prefWidth="300.0" maxWidth="Infinity" promptText="🔍 Nhập mã giảm giá..." style="-fx-border-color: #B0C4DE; -fx-border-radius: 20; -fx-background-radius: 20; -fx-padding: 10;" styleClass="form-field" HBox.hgrow="ALWAYS">
                            <font>
                                <Font size="13.0" />
                            </font>
                        </TextField>

                        <!-- Spacer -->
                        <Region HBox.hgrow="ALWAYS" />

                        <!-- Status ComboBox -->
                        <ComboBox fx:id="cmbTrangThai" prefHeight="45.0" prefWidth="180.0" maxWidth="Infinity" promptText="Tất cả trạng thái" style="-fx-background-radius: 20; -fx-background-color: #F5F9FF; -fx-border-color: #B0C4DE; -fx-border-radius: 20; -fx-padding: 5;" styleClass="hover-effect" HBox.hgrow="ALWAYS">
                        </ComboBox>

                        <!-- Refresh Button -->
                        <Button fx:id="btnLamMoi" mnemonicParsing="false" prefHeight="45.0" prefWidth="130.0" styleClass="btn-lam-moi" text="🔄 Làm Mới">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>

                <!-- Table Section -->
                <VBox prefHeight="600.0" prefWidth="890.0" styleClass="table-container" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
                    <children>
                        <TableView fx:id="tableViewKhachHang" prefHeight="600.0" prefWidth="890.0" styleClass="table-view" VBox.vgrow="ALWAYS">
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                            <columns>
                                <TableColumn fx:id="colMaGiamgia" prefWidth="80.0" minWidth="60.0" maxWidth="Infinity" text="Mã giảm giá" />
                                <TableColumn fx:id="colCode" prefWidth="100.0" minWidth="80.0" maxWidth="Infinity" text="CODE" />
                                <TableColumn fx:id="colGiamGia" prefWidth="90.0" minWidth="70.0" maxWidth="Infinity" text="Giảm giá" />
                                <TableColumn fx:id="colThoiGian" prefWidth="150.0" minWidth="120.0" maxWidth="Infinity" text="Thời gian" />
                                <TableColumn fx:id="colTongTienToiThieu" prefWidth="130.0" minWidth="100.0" maxWidth="Infinity" text="Tổng tiền tối thiểu" />
                                <TableColumn fx:id="colMoTa" prefWidth="120.0" minWidth="80.0" maxWidth="Infinity" text="Mô tả" />
                                <TableColumn fx:id="colTrangThai" prefWidth="90.0" minWidth="70.0" maxWidth="Infinity" text="Trạng thái" />
                                <TableColumn fx:id="colThaoTac" prefWidth="150.0" minWidth="120.0" maxWidth="Infinity" text="Thao tác" />
                            </columns>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </VBox>
    </center>
</BorderPane>