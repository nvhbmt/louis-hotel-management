<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="rootPane" stylesheets="@../css/main.css, @../css/quan-ly-giam-gia.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.louishotelmanagement.controller.QuanLyGiamGiaController">
    <center>
        <!-- Main Content Area -->
        <VBox prefHeight="800.0" prefWidth="950.0" spacing="20.0" styleClass="main-content">
            <!-- Header -->
            <VBox prefHeight="44.0" prefWidth="918.0" spacing="5.0">
            <GridPane>
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                        <VBox prefHeight="60.0" prefWidth="466.0">
                            <children>
                                <Label styleClass="main-header" text="Quản Lý Mã Giảm Giá" />
                                <Label prefHeight="15.0" prefWidth="445.0" styleClass="main-subtitle" text="Quản lý các mã giảm giá và khuyến mãi trong khách sạn" />
                            </children>
                        </VBox>
                        <HBox alignment="TOP_RIGHT" prefHeight="33.0" prefWidth="145.0" spacing="16.0" GridPane.columnIndex="1">
                            <children>
                                <Button fx:id="btnThemMaGiamGia" alignment="CENTER_RIGHT" contentDisplay="RIGHT" onAction="#handleThemMaGiamGia" styleClass="btn-success" text="➕ Thêm Mã Giảm Giá" />
                            </children>
                        </HBox>
               </children>
               <VBox.margin>
                  <Insets bottom="32.0" />
               </VBox.margin>
            </GridPane>
                <VBox.margin>
                    <Insets bottom="32.0" />
                </VBox.margin>
            </VBox>
            <GridPane hgap="20.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <children>
                    <VBox prefHeight="200.0" prefWidth="100.0" styleClass="stat-card-border">
                        <children>
                            <Label styleClass="stat-label" text="Tổng số mã" />
                            <Label fx:id="lblTongSoMaGiamGia" styleClass="stat-value" text="0" />
                        </children>
                    </VBox>
                    <VBox layoutX="10.0" layoutY="-27.0" prefHeight="200.0" prefWidth="100.0" styleClass="stat-card-border" GridPane.columnIndex="1">
                        <children>
                            <Label styleClass="stat-label" text="Đang hoạt động" />
                            <Label fx:id="lblSoMaDangHoatDong" styleClass="stat-value" text="0" />
                        </children>
                    </VBox>
                    <VBox layoutX="238.0" layoutY="-27.0" prefHeight="200.0" prefWidth="100.0" styleClass="stat-card-border" GridPane.columnIndex="2">
                        <children>
                            <Label styleClass="stat-label" text="Hết hạn" />
                            <Label fx:id="lblSoMaHetHan" styleClass="stat-value" text="0" />
                        </children>
                    </VBox>
                    <VBox layoutX="10.0" layoutY="-27.0" prefHeight="200.0" prefWidth="100.0" styleClass="stat-card-border" GridPane.columnIndex="3">
                        <children>
                            <Label styleClass="stat-label" text="Chưa bắt đầu" />
                            <Label fx:id="lblSoMaChuaBatDau" styleClass="stat-value" text="0" />
                        </children>
                    </VBox>
                </children>
                <VBox.margin>
                    <Insets bottom="20.0" />
                </VBox.margin>
            </GridPane>

            <!-- Control Panel -->
            <HBox alignment="CENTER_LEFT" spacing="15.0" />

            <!-- Search and Filter Panel -->
            <HBox alignment="CENTER_LEFT" spacing="15.0">
                <TextField fx:id="txtTimKiem" onKeyReleased="#handleTimKiem" prefHeight="33.0" prefWidth="239.0" promptText="Nhập mã, code hoặc mô tả..." styleClass="form-field" />
                <ComboBox fx:id="cbKieuGiamGia" onAction="#handleLocKieuGiamGia" prefHeight="41.0" prefWidth="165.0" promptText="Tất cả kiểu giảm giá" styleClass="form-field" />
                <ComboBox fx:id="cbTrangThai" onAction="#handleLocTrangThai" prefHeight="41.0" prefWidth="165.0" promptText="Tất cả trạng thái" styleClass="form-field" />
                <Button fx:id="btnLamMoi" onAction="#handleLamMoi" prefHeight="37.0" prefWidth="121.0" styleClass="btn-info" text="🔄 Làm Mới" />
            </HBox>

            <!-- Table View -->
            <VBox prefHeight="561.0" prefWidth="890.0" styleClass="table-container">
                <TableView fx:id="tableViewMaGiamGia" prefHeight="576.0" prefWidth="850.0" styleClass="table-view">
                    <columns>
                        <TableColumn fx:id="colMaGG" prefWidth="80.0" text="Mã GG" />
                        <TableColumn fx:id="colCode" prefWidth="120.0" text="Code" />
                        <TableColumn fx:id="colGiamGia" prefWidth="100.0" text="Giá Trị" />
                        <TableColumn fx:id="colKieuGiamGia" prefWidth="120.0" text="Kiểu" />
                        <TableColumn fx:id="colNgayBatDau" prefWidth="100.0" text="Ngày Bắt Đầu" />
                        <TableColumn fx:id="colNgayKetThuc" prefWidth="100.0" text="Ngày Kết Thúc" />
                        <TableColumn fx:id="colTongTienToiThieu" prefWidth="120.0" text="Tổng Tiền Tối Thiểu" />
                        <TableColumn fx:id="colTrangThai" prefWidth="100.0" text="Trạng Thái" />
                        <TableColumn fx:id="colMoTa" prefWidth="150.0" text="Mô Tả" />
                        <TableColumn fx:id="colThaoTac" minWidth="0.0" prefWidth="140.0" text="Thao tác" />
                    </columns>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </TableView>
            </VBox>
        </VBox>
    </center>
   <padding>
      <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
   </padding>
</BorderPane>
