<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<BorderPane fx:id="mainBorderPane" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.louishotelmanagement.controller.LayoutController" stylesheets="@../css/main.css">
   <left>
      <!-- Sidebar -->
      <VBox prefWidth="250.0" styleClass="sidebar">
         <padding>
            <Insets bottom="20.0" left="16.0" right="16.0" top="20.0" />
         </padding>
         
         <!-- Logo Section -->
         <VBox alignment="CENTER" spacing="12.0">
            <Circle fill="#2196F3" radius="32.0" stroke="#1976D2" strokeWidth="2.0" />
            <Label styleClass="logo-text" text="LOIUS HOTEL" />
         </VBox>

         <!-- Menu Section -->
         <VBox spacing="4.0" styleClass="menu-section">
            <Label styleClass="menu-label" text="MENU" />
            <TreeView fx:id="menuTree" prefHeight="586.0" prefWidth="218.0" stylesheets="@../css/treeview.css" />
         </VBox>

      </VBox>
   </left>
</BorderPane>
