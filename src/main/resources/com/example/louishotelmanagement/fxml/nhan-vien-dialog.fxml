<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox prefWidth="450.0" spacing="20.0" style="-fx-padding: 20; -fx-background-color: #f8f9fa;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.louishotelmanagement.controller.NhanVienDialogController">
    <children>
        <Label fx:id="lblTitle" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Thêm Nhân Viên Mới" />

        <GridPane hgap="10.0" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Mã NV:" GridPane.rowIndex="0" />
                <TextField fx:id="tfMaNV" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Họ tên:" GridPane.rowIndex="1" />
                <TextField fx:id="tfHoTen" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Ngày sinh:" GridPane.rowIndex="2" />
                <DatePicker fx:id="dpNgaySinh" prefWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Số ĐT:" GridPane.rowIndex="3" />
                <TextField fx:id="tfSoDT" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Địa chỉ:" GridPane.rowIndex="4" />
                <TextField fx:id="tfDiaChi" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <Label text="Chức vụ:" GridPane.rowIndex="5" />
                <ComboBox fx:id="cbChucVu" prefWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            </children>
        </GridPane>

        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <children>
                <Button fx:id="btnLuu" onAction="#handleLuu" prefWidth="80.0" styleClass="btn-success" text="Lưu" />
                <Button fx:id="btnHuy" onAction="#handleHuy" prefWidth="80.0" styleClass="btn-secondary" text="Hủy" />
            </children>
        </HBox>
    </children>
</VBox>