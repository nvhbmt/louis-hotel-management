<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefWidth="500.0" spacing="15.0" style="-fx-padding: 20; -fx-background-color: #f8f9fa;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.louishotelmanagement.controller.NhanVienDialogController">
    <children>
        <Label fx:id="lblTitle" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Quản Lý Nhân Viên &amp; Tài Khoản" />

        <TabPane prefHeight="350.0" tabClosingPolicy="UNAVAILABLE" style="-fx-background-color: white; -fx-border-color: #dee2e6;">
            <tabs>
                <Tab text="Thông tin cá nhân">
                    <VBox spacing="10.0" style="-fx-padding: 15;">
                        <GridPane hgap="10.0" vgap="12.0">
                            <columnConstraints>
                                <ColumnConstraints prefWidth="120.0" />
                                <ColumnConstraints hgrow="ALWAYS" />
                            </columnConstraints>
                            <children>
                                <Label text="Mã nhân viên:" />
                                <TextField fx:id="tfMaNV" editable="false" GridPane.columnIndex="1" />

                                <Label text="Họ tên:" GridPane.rowIndex="1" />
                                <TextField fx:id="tfHoTen" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                <Label text="Ngày sinh:" GridPane.rowIndex="2" />
                                <DatePicker fx:id="dpNgaySinh" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                                <Label text="Số điện thoại:" GridPane.rowIndex="3" />
                                <TextField fx:id="tfSoDT" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                                <Label text="Địa chỉ:" GridPane.rowIndex="4" />
                                <TextField fx:id="tfDiaChi" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                                <Label text="Chức vụ:" GridPane.rowIndex="5" />
                                <ComboBox fx:id="cbChucVu" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                            </children>
                        </GridPane>
                    </VBox>
                </Tab>

                <Tab text="Tài khoản hệ thống">
                    <VBox spacing="10.0" style="-fx-padding: 15;">
                        <GridPane hgap="10.0" vgap="12.0">
                            <columnConstraints>
                                <ColumnConstraints prefWidth="120.0" />
                                <ColumnConstraints hgrow="ALWAYS" />
                            </columnConstraints>
                            <children>
                                <Label text="Tên đăng nhập:" />
                                <TextField fx:id="tfTenDangNhap" GridPane.columnIndex="1" />

                                <Label text="Mật khẩu:" GridPane.rowIndex="1" />
                                <PasswordField fx:id="pfMatKhau" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                <Label text="Quyền hạn:" GridPane.rowIndex="2" />
                                <ComboBox fx:id="cbQuyen" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                                <Label text="Trạng thái:" GridPane.rowIndex="3" />
                                <CheckBox fx:id="ckTrangThai" selected="true" text="Cho phép hoạt động" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                            </children>
                        </GridPane>
                        <Label style="-fx-text-fill: #7f8c8d; -fx-font-style: italic;" text="* Nếu sửa: Để trống mật khẩu nếu muốn giữ nguyên mật khẩu cũ." wrapText="true" />
                    </VBox>
                </Tab>
            </tabs>
        </TabPane>

        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <children>
                <Button fx:id="btnLuu" onAction="#handleLuu" prefWidth="100.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;" text="Lưu dữ liệu" />
                <Button fx:id="btnHuy" onAction="#handleHuy" prefWidth="80.0" text="Hủy bỏ" />
            </children>
        </HBox>
    </children>
</VBox>