<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<VBox fx:id="thongKeContent" spacing="20.0" style="-fx-background-color: #f8f9fa; -fx-padding: 30;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <!-- Header -->
   <VBox spacing="5.0">
      <Label style="-fx-font-size: 28px; -fx-font-weight: bold;" text="Thống kê" textFill="#2c3e50" />
      <Label style="-fx-font-size: 14px;" text="Xem tổng quan về hiệu suất kinh doanh khách sạn" textFill="#7f8c8d" />
   </VBox>
   
   <!-- Statistics Cards -->
   <HBox spacing="20.0">
      <!-- Card 1: Total Customers -->
      <VBox alignment="CENTER" prefHeight="120.0" prefWidth="200.0" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-padding: 20;">
         <Label style="-fx-font-size: 12px;" text="Tổng khách hàng tháng này" textFill="#7f8c8d" />
         <Label style="-fx-font-size: 32px; -fx-font-weight: bold;" text="120" textFill="#2c3e50" />
         <Label style="-fx-font-size: 12px;" text="Khách hàng" textFill="#7f8c8d" />
      </VBox>
      
      <!-- Card 2: Most Used Service -->
      <VBox alignment="CENTER" prefHeight="120.0" prefWidth="200.0" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-padding: 20;">
         <Label style="-fx-font-size: 12px;" text="Dịch vụ được sử dụng nhiều nhất" textFill="#7f8c8d" />
         <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Pickle ball" textFill="#2c3e50" />
         <Label style="-fx-font-size: 12px;" text="42% tổng số đặt dịch vụ" textFill="#7f8c8d" />
      </VBox>
      
      <!-- Card 3: Highest Revenue Month -->
      <VBox alignment="CENTER" prefHeight="120.0" prefWidth="200.0" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-padding: 20;">
         <Label style="-fx-font-size: 12px;" text="Tháng có doanh thu cao nhất trong năm" textFill="#7f8c8d" />
         <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="67.5 M VND" textFill="#2c3e50" />
         <Label style="-fx-font-size: 12px;" text="03/2025" textFill="#7f8c8d" />
      </VBox>
   </HBox>
   
   <!-- Charts Section -->
   <HBox prefHeight="400.0" spacing="20.0">
      <!-- Revenue Chart -->
      <VBox prefWidth="500.0" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-padding: 20;">
         <HBox alignment="CENTER_LEFT" spacing="20.0">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Doanh thu" textFill="#2c3e50" />
            <Region HBox.hgrow="ALWAYS" />
            <!-- Chart Controls -->
            <HBox spacing="5.0">
               <ToggleButton fx:id="nutChuyenTuan" mnemonicParsing="false" text="Tuần" />
               <ToggleButton fx:id="nutChuyenThang" mnemonicParsing="false" text="Tháng" />
               <ToggleButton fx:id="nutChuyenNam" mnemonicParsing="false" selected="true" text="Năm" />
            </HBox>
            <HBox spacing="5.0">
               <ToggleButton fx:id="nutChuyenVnd" mnemonicParsing="false" selected="true" text="VND" />
               <ToggleButton fx:id="nutChuyenUsd" mnemonicParsing="false" text="USD" />
            </HBox>
         </HBox>
         
         <!-- Placeholder for Chart -->
         <VBox alignment="CENTER" prefHeight="300.0" style="-fx-background-color: #f8f9fa; -fx-background-radius: 5; -fx-border-color: #e9ecef; -fx-border-radius: 5;">
            <Label style="-fx-font-size: 14px;" text="📊 Biểu đồ doanh thu sẽ được hiển thị ở đây" textFill="#6c757d" />
            <Label style="-fx-font-size: 12px;" text="(T1-T12: 0-100M VND)" textFill="#6c757d" />
         </VBox>
         
         <!-- Legend -->
         <HBox alignment="CENTER" spacing="10.0">
            <Rectangle fill="#27ae60" height="15.0" width="15.0" />
            <Label style="-fx-font-size: 12px;" text="Doanh thu" textFill="#2c3e50" />
         </HBox>
      </VBox>
      
      <!-- Room Status Chart -->
      <VBox prefWidth="300.0" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-padding: 20;">
         <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Trạng thái phòng" textFill="#2c3e50" />
         
         <!-- Placeholder for Pie Chart -->
         <VBox alignment="CENTER" prefHeight="200.0" style="-fx-background-color: #f8f9fa; -fx-background-radius: 5; -fx-border-color: #e9ecef; -fx-border-radius: 5;">
            <Label style="-fx-font-size: 14px;" text="🥧 Biểu đồ trạng thái phòng" textFill="#6c757d" />
            <Label style="-fx-font-size: 12px;" text="(Đã đặt: 55%, Còn trống: 35%, Bảo trì: 10%)" textFill="#6c757d" />
         </VBox>
         
         <!-- Legend -->
         <VBox spacing="8.0">
            <HBox spacing="10.0">
               <Rectangle fill="#f39c12" height="12.0" width="12.0" />
               <Label style="-fx-font-size: 12px;" text="Còn trống" textFill="#2c3e50" />
            </HBox>
            <HBox spacing="10.0">
               <Rectangle fill="#3498db" height="12.0" width="12.0" />
               <Label style="-fx-font-size: 12px;" text="Đã đặt" textFill="#2c3e50" />
            </HBox>
            <HBox spacing="10.0">
               <Rectangle fill="#9b59b6" height="12.0" width="12.0" />
               <Label style="-fx-font-size: 12px;" text="Bảo trì" textFill="#2c3e50" />
            </HBox>
         </VBox>
      </VBox>
   </HBox>
</VBox>
