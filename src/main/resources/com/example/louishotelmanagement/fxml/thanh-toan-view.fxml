<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToHeight="true" fitToWidth="true" stylesheets="@../css/main.css, @../css/thanh-toan.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.louishotelmanagement.controller.QuanLyGiamGiaController">
    <content>
        <BorderPane>
            <center>
                <VBox fx:id="thanhToanContent" prefHeight="823.0" prefWidth="934.0" spacing="20.0" VBox.vgrow="ALWAYS">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>

                    <!-- Header -->
                    <HBox prefHeight="72.0" prefWidth="894.0" HBox.hgrow="ALWAYS">
                        <children>
                            <VBox prefHeight="100.0" prefWidth="363.0" spacing="5.0" VBox.vgrow="ALWAYS">
                                <Label styleClass="main-header" text="Thanh Toán Khách Sạn" />
                                <Label styleClass="main-subtitle" text="Quản lý và thanh toán dịch vụ cho khách hàng" />
                            </VBox>
                            <Region HBox.hgrow="ALWAYS" />
                            <VBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="538.0">
                                <children>
                                    <Button fx:id="btnLamMoi" prefHeight="37.0" prefWidth="112.0" styleClass="btn-info" text="Làm mới" />
                                </children>
                            </VBox>
                        </children>
                    </HBox>

                    <!-- Thông tin khách hàng -->
                    <VBox maxHeight="200" spacing="15.0" styleClass="chart-container" VBox.vgrow="ALWAYS">
                        <Label styleClass="section-title" text="Thông tin khách hàng và phòng" />
                        <HBox alignment="CENTER_LEFT" prefHeight="66.0" spacing="20.0">
                            <children>
                                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                    <Label styleClass="field-label" text="Mã Khách Hàng" />
                                    <TextField fx:id="txtMaKhachHang" prefHeight="33.0" HBox.hgrow="ALWAYS" />
                                </VBox>
                                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                    <Label styleClass="field-label" text="Họ tên" />
                                    <TextField fx:id="txtHoTen" prefHeight="33.0" HBox.hgrow="ALWAYS" />
                                </VBox>
                                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                    <Label styleClass="field-label" text="Số điện thoại" />
                                    <TextField fx:id="txtSoDienThoai" prefHeight="33.0" HBox.hgrow="ALWAYS" />
                                </VBox>
                                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                    <Label styleClass="field-label" text="Email" />
                                    <TextField fx:id="txtEmail" prefHeight="33.0" HBox.hgrow="ALWAYS" />
                                </VBox>
                            </children>
                        </HBox>

                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" spacing="20.0">
                            <children>
                                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                    <Label styleClass="field-label" text="Hạng khách" />
                                    <TextField fx:id="txtHangkhach" prefHeight="33.0" HBox.hgrow="ALWAYS" />
                                </VBox>
                                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                    <Label styleClass="field-label" text="Số phòng" />
                                    <TextField fx:id="txtSoPhong" prefHeight="33.0" HBox.hgrow="ALWAYS" /></VBox>
                                <VBox spacing="5.0" HBox.hgrow="ALWAYS"><Label styleClass="field-label" text="Ngày nhận" />
                                    <TextField fx:id="txtNgayNhan" prefHeight="33.0" HBox.hgrow="ALWAYS" />
                                </VBox>
                                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                    <Label styleClass="field-label" text="Ngày trả" />
                                    <TextField fx:id="txtNgayTra" prefHeight="33.0" HBox.hgrow="ALWAYS" />
                                </VBox>
                            </children>
                        </HBox>
                    </VBox>

                    <!-- Mã giảm giá & phương thức thanh toán -->
                    <HBox prefHeight="207.0" spacing="20.0" VBox.vgrow="ALWAYS">
                        <children>
                            <VBox prefHeight="214.0" prefWidth="434.0" spacing="50.0" styleClass="chart-container" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                                <Label styleClass="section-title" text="Mã giảm giá" />
                                <Region prefHeight="10.0" prefWidth="378.0" />
                                <TextField fx:id="txtMaGiamGia" prefHeight="25.0" prefWidth="378.0" HBox.hgrow="ALWAYS" />
                            </VBox>
                            <Region />
                            <VBox alignment="TOP_LEFT" prefHeight="215.0" prefWidth="472.0" spacing="15.0" styleClass="chart-container" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                                <Label styleClass="section-title" text="Phương thức thanh toán" />
                                <Region VBox.vgrow="ALWAYS" />
                                <HBox alignment="CENTER_LEFT" spacing="10.0" HBox.hgrow="ALWAYS">
                                    <RadioButton fx:id="rbtnTienMat" />
                                    <TextField prefHeight="33.0" text="Tiền mặt" HBox.hgrow="ALWAYS" />
                                </HBox>
                                <Region VBox.vgrow="ALWAYS" />
                                <HBox alignment="CENTER_LEFT" spacing="10.0" HBox.hgrow="ALWAYS">
                                    <RadioButton fx:id="rbtnTheNganHang" />
                                    <TextField prefHeight="33.0" text="Thẻ ngân hàng" HBox.hgrow="ALWAYS" />
                                </HBox>
                                <Region VBox.vgrow="ALWAYS" />
                                <HBox alignment="CENTER_LEFT" spacing="10.0" HBox.hgrow="ALWAYS">
                                    <RadioButton fx:id="rbtnViDienTu" />
                                    <TextField prefHeight="33.0" text="Ví điện tử" HBox.hgrow="ALWAYS" />
                                </HBox>
                            </VBox>
                        </children>
                    </HBox>

                    <!-- Thông tin thanh toán -->
                    <HBox alignment="CENTER" spacing="10" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                        <children>
                            <VBox alignment="TOP_LEFT" maxWidth="Infinity" prefWidth="150" spacing="5.0" styleClass="chart-container" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                                <Label styleClass="summary-label" text="Tổng số tiền phòng" />
                                <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #1e88e5;" text="3.000.000 ₫" />
                            </VBox>

                            <VBox alignment="TOP_LEFT" maxWidth="Infinity" prefWidth="150" spacing="5.0" styleClass="chart-container" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                                <Label styleClass="summary-label" text="Tổng số tiền dịch vụ" />
                                <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #ff9800;" text="1.500.000 ₫" />
                            </VBox>

                            <VBox alignment="TOP_LEFT" maxWidth="Infinity" prefWidth="150" spacing="5.0" styleClass="chart-container" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                                <Label styleClass="summary-label" text="VAT" />
                                <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #9c27b0;" text="69.000 ₫" />
                            </VBox>

                            <VBox alignment="TOP_LEFT" maxWidth="Infinity" prefWidth="150" spacing="5.0" styleClass="chart-container" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                                <Label styleClass="summary-label" text="Tổng giảm giá" />
                                <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #e53935;" text="69.000 ₫" />
                            </VBox>

                            <VBox alignment="TOP_LEFT" maxWidth="Infinity" prefWidth="150" spacing="5.0" styleClass="chart-container" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                                <Label styleClass="summary-label" text="Tổng thanh toán" />
                                <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #43a047;" text="3.500.000 ₫" />
                            </VBox>
                        </children>
                    </HBox>


                    <!-- Nút hành động -->
                    <HBox alignment="TOP_RIGHT" prefHeight="0.0" prefWidth="894.0" spacing="20.0" VBox.vgrow="ALWAYS">
                        <children>
                            <Button fx:id="btnHuy" prefHeight="38.0" prefWidth="107.0" styleClass="btn-cancel" text="Hủy" />
                            <Button fx:id="btnThanhToan" styleClass="btn-success" text="Thanh Toán" />
                        </children>
                    </HBox>
                </VBox>
            </center>
        </BorderPane>
    </content>
</ScrollPane>
