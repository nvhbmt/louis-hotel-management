<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane prefHeight="768.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.louishotelmanagement.controller.DatDichVuController"
            stylesheets="@../css/dat-dich-vu-view.css"
>

    <center>
        <SplitPane dividerPositions="0.65" styleClass="main-background">
            <VBox spacing="10.0" styleClass="left-panel">
                <padding>
                    <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                </padding>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <Label styleClass="service-title"
                           text="Danh Sách Dịch Vụ"/>
                    <HBox HBox.hgrow="ALWAYS"/>
                    <TextField fx:id="txtTimKiem" prefWidth="250.0" promptText="Tìm tên dịch vụ..."
                               styleClass="search-field"/>
                </HBox>
                <Separator prefWidth="200.0"/>

                <ScrollPane fitToWidth="true" hbarPolicy="NEVER"
                            styleClass="transparent-scroll" vbarPolicy="AS_NEEDED"
                            VBox.vgrow="ALWAYS">
                    <FlowPane fx:id="pnDanhSachDichVu" hgap="15.0" vgap="15.0" styleClass="flow-container">
                    </FlowPane>
                </ScrollPane>
            </VBox>

            <VBox spacing="15.0"
                  styleClass="right-panel">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                </padding>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../image/desk-bell.png"/>
                    </ImageView>
                    <Label styleClass="order-title"
                           text="Thông Tin Đặt"/>
                </HBox>

                <GridPane hgap="10.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="120.0" minWidth="10.0" prefWidth="90.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <Label text="Khách hàng:" textFill="#555555"/>
                    <ComboBox fx:id="dsKhachHang" maxWidth="1.7976931348623157E308" promptText="Chọn khách hàng"
                              GridPane.columnIndex="1"/>

                    <Label text="Phòng:" textFill="#555555" GridPane.rowIndex="1"/>
                    <ComboBox fx:id="dsPhong" maxWidth="1.7976931348623157E308" promptText="Chọn phòng"
                              GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                    <Label text="Nhân viên:" textFill="#555555" GridPane.rowIndex="2"/>
                    <TextField fx:id="maNV" editable="false" styleClass="employee-field" text="NV001"
                               GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                </GridPane>

                <Separator prefWidth="200.0"/>
                <Label styleClass="bold-label" text="Dịch vụ đã chọn"/>

                <TableView fx:id="tblGioHang" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colGH_Ten" prefWidth="130.0" text="Tên DV"/>
                        <TableColumn fx:id="colGH_SL" prefWidth="50.0" styleClass="center-align" text="SL"/>
                        <TableColumn fx:id="colGH_ThanhTien" prefWidth="100.0" styleClass="center-right-align"
                                     text="Thành tiền"/>
                        <TableColumn fx:id="colGH_Xoa" prefWidth="50.0" styleClass="center-align" text="#"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>

                <VBox spacing="10.0"
                      styleClass="summary-container">
                    <TextArea fx:id="txtGhiChu" prefHeight="50.0" promptText="Ghi chú (nếu có)..."
                              wrapText="true"/>
                    <HBox alignment="CENTER_RIGHT">
                        <Label text="Tổng cộng: ">
                            <font>
                                <Font size="16.0"/>
                            </font>
                        </Label>
                        <Label fx:id="lblTongTienTam" styleClass="total-amount" text="0 VND">
                            <font>
                                <Font name="System Bold" size="20.0"/>
                            </font>
                        </Label>
                    </HBox>
                    <Button fx:id="btnXacNhanLapPhieu" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                            onAction="#handleXacNhanLapPhieu" prefHeight="40.0"
                            styleClass="confirm-button"
                            text="XÁC NHẬN ĐẶT DỊCH VỤ"/>
                </VBox>
            </VBox>
        </SplitPane>
    </center>
</BorderPane>