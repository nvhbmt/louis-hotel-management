<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>
<BorderPane prefHeight="871.0" prefWidth="1364.0" stylesheets="@../css/main.css, @../css/quan-ly-phong.css"
            xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.louishotelmanagement.controller.LoaiPhongController">
    <padding>
        <Insets bottom="32.0" left="32.0" right="32.0" top="32.0"/>
    </padding>
    <center>
        <!-- Main Content Area -->
        <VBox spacing="32.0" BorderPane.alignment="CENTER">
            <GridPane>
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints/>
                </rowConstraints>
                <VBox.margin>
                    <Insets/>
                </VBox.margin>
                <HBox spacing="16.0">
                    <ImageView fitHeight="72.0" fitWidth="75.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../image/interior-design.png"/>
                    </ImageView>
                    <VBox HBox.hgrow="ALWAYS">
                        <Label styleClass="main-header" text="Quản Lý Loại Phòng"/>
                        <Label prefHeight="20.0" prefWidth="450.0" styleClass="main-subtitle"
                               text="Quản lý thông tin và giá cả các loại phòng trong khách sạn"/>
                    </VBox>
                </HBox>
                <HBox alignment="CENTER_RIGHT" spacing="16.0" GridPane.columnIndex="1" GridPane.halignment="CENTER"
                      GridPane.valignment="CENTER">
                    <Button fx:id="btnThemLoaiPhong" alignment="CENTER_RIGHT" contentDisplay="RIGHT"
                            onAction="#handleThemLoaiPhong" prefHeight="40.0" prefWidth="140.0" styleClass="btn-them"
                            text="➕ Thêm Loại Phòng"/>
                </HBox>
            </GridPane>
            <GridPane alignment="TOP_CENTER" hgap="20" prefHeight="100.0" HBox.hgrow="ALWAYS" VBox.vgrow="NEVER">
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS" percentWidth="25"/>
                    <ColumnConstraints hgrow="ALWAYS" percentWidth="25"/>
                    <ColumnConstraints hgrow="ALWAYS" percentWidth="25"/>
                    <ColumnConstraints hgrow="ALWAYS" percentWidth="25"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints vgrow="SOMETIMES"/>
                </rowConstraints>
                <VBox.margin>
                    <Insets/>
                </VBox.margin>
                <VBox styleClass="stat-box" GridPane.columnIndex="0" GridPane.hgrow="ALWAYS">
                    <HBox alignment="CENTER_LEFT" spacing="15.0">
                        <VBox alignment="CENTER_LEFT" spacing="10" HBox.hgrow="ALWAYS">
                            <Label styleClass="stat-title" text="Tổng số loại phòng"/>
                            <Label fx:id="lblTongSoLoaiPhong" styleClass="stat-number" text="0"/>
                        </VBox>
                        <ImageView fitHeight="60.0" fitWidth="71.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../image/living-room.png"/>
                        </ImageView>
                    </HBox>
                </VBox>
                <VBox styleClass="stat-box" GridPane.columnIndex="1">
                    <HBox alignment="CENTER_LEFT" spacing="15.0">
                        <VBox alignment="CENTER_LEFT" spacing="10" HBox.hgrow="ALWAYS">
                            <Label styleClass="stat-title" text="Giá thấp nhất"/>
                            <Label fx:id="lblGiaThapNhat" styleClass="stat-number" text="0 VNĐ"/>
                        </VBox>
                        <ImageView fitHeight="60.0" fitWidth="75.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../image/dining-table.png"/>
                        </ImageView>
                    </HBox>
                </VBox>
                <VBox styleClass="stat-box" GridPane.columnIndex="2">
                    <HBox alignment="CENTER_LEFT" spacing="15.0">
                        <VBox alignment="CENTER_LEFT" spacing="10" HBox.hgrow="ALWAYS">
                            <Label styleClass="stat-title" text="Giá cao nhất"/>
                            <Label fx:id="lblGiaCaoNhat" styleClass="stat-number" text="0 VNĐ"/>
                        </VBox>
                        <ImageView fitHeight="60.0" fitWidth="75.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../image/bed.png"/>
                        </ImageView>
                    </HBox>
                </VBox>
                <VBox styleClass="stat-box" GridPane.columnIndex="3">
                    <HBox alignment="CENTER_LEFT" spacing="15.0">
                        <VBox alignment="CENTER_LEFT" spacing="10" HBox.hgrow="ALWAYS">
                            <Label styleClass="stat-title" text="Giá trung bình"/>
                            <Label fx:id="lblGiaTrungBinh" styleClass="stat-number" text="0 VNĐ"/>
                        </VBox>
                        <ImageView fitHeight="60.0" fitWidth="75.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../image/double-bed_avg.png"/>
                        </ImageView>
                    </HBox>
                </VBox>
            </GridPane>

            <!-- Search and Filter Panel -->
            <HBox alignment="CENTER_LEFT" spacing="15.0">
                <TextField fx:id="txtTimKiem" onKeyReleased="#handleTimKiem" prefHeight="40.0" prefWidth="158.0"
                           promptText="Nhập mã loại phòng hoặc tên..." styleClass="form-field" HBox.hgrow="ALWAYS"/>
                <ComboBox fx:id="cbLocGia" onAction="#handleLocGia" prefHeight="40.0" prefWidth="165.0"
                          promptText="Tất cả khoảng giá">
                    <styleClass>
                        <String fx:value="form-field"/>
                        <String/>
                    </styleClass>
                </ComboBox>
                <Button fx:id="btnLamMoi" onAction="#handleLamMoi" prefHeight="41.0" prefWidth="120.0"
                        styleClass="btn-lam-moi" text="🔄 Làm Mới"/>
            </HBox>

            <!-- Table View -->
            <VBox prefWidth="890.0" styleClass="table-container" VBox.vgrow="ALWAYS">
                <TableView fx:id="tableViewLoaiPhong" styleClass="table-view" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colMaLoaiPhong" prefWidth="120.0" text="Mã Loại Phòng"/>
                        <TableColumn fx:id="colTenLoai" prefWidth="150.0" text="Tên Loại Phòng"/>
                        <TableColumn fx:id="colDonGia" prefWidth="120.0" text="Đơn Giá"/>
                        <TableColumn fx:id="colMoTa" prefWidth="300.0" text="Mô Tả"/>
                        <TableColumn fx:id="colThaoTac" minWidth="0.0" prefWidth="140.0" text="Thao tác"/>
                    </columns>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </VBox>
        </VBox>
    </center>
</BorderPane>
