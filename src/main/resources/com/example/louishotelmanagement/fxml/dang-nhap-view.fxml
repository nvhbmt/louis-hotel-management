<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.louishotelmanagement.controller.DangNhapController"
      alignment="CENTER" prefHeight="400.0" prefWidth="350.0" spacing="20.0"
      style="-fx-background-color: #f8f9fa; -fx-padding: 40;">
    
    <!-- Header -->
    <VBox alignment="CENTER" spacing="10.0">
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="ĐĂNG NHẬP"
               textFill="#2c3e50"/>
        <Label style="-fx-font-size: 14px;" text="Hệ thống quản lý khách sạn Louis" textFill="#7f8c8d"/>
    </VBox>
    
    <!-- Login Form -->
    <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-padding: 30;">
        <VBox spacing="10.0">
            <Label text="Tên đăng nhập:" textFill="#2c3e50">
                <font>
                    <Font name="System Bold" size="12.0"/>
                </font>
            </Label>
            <TextField fx:id="tenDangNhapField" promptText="Nhập tên đăng nhập">
                <font>
                    <Font size="14.0"/>
                </font>
            </TextField>
        </VBox>
        
        <VBox spacing="10.0">
            <Label text="Mật khẩu:" textFill="#2c3e50">
                <font>
                    <Font name="System Bold" size="12.0"/>
                </font>
            </Label>
            <PasswordField fx:id="matKhauField" promptText="Nhập mật khẩu">
                <font>
                    <Font size="14.0"/>
                </font>
            </PasswordField>
        </VBox>
        
        <Button fx:id="dangNhapBtn" mnemonicParsing="false" prefHeight="40.0" prefWidth="200.0"
                style="-fx-background-color: #007bff; -fx-background-radius: 5;"
                text="ĐĂNG NHẬP" textFill="WHITE">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Button>
        
        <Label fx:id="thongBaoLabel" visible="false" textFill="#dc3545">
            <font>
                <Font size="12.0"/>
            </font>
        </Label>
    </VBox>
    
    <!-- Footer -->
    <VBox alignment="CENTER" spacing="5.0">
        <Label style="-fx-font-size: 12px;" text="© 2024 Louis Hotel Management System" textFill="#95a5a6"/>
        <Label style="-fx-font-size: 10px;" text="Phiên bản 1.0" textFill="#bdc3c7"/>
    </VBox>
</VBox>
