<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.louishotelmanagement.controller.DangNhapController"
      alignment="CENTER" prefHeight="400.0" prefWidth="350.0" spacing="20.0"
      styleClass="main-container"
      stylesheets="@../css/dang-nhap.css">

    <!-- Header -->
    <VBox alignment="CENTER" spacing="10.0">
        <Label styleClass="header-title" text="ĐĂNG NHẬP"/>
        <Label styleClass="header-subtitle" text="Hệ thống quản lý khách sạn Louis"/>
    </VBox>

    <!-- Login Form -->
    <VBox spacing="15.0" styleClass="login-form">
        <VBox spacing="10.0">
            <Label styleClass="form-label" text="Tên đăng nhập:"/>
            <TextField fx:id="tenDangNhapField" styleClass="text-field" promptText="Nhập tên đăng nhập"/>
        </VBox>

        <VBox spacing="10.0">
            <Label styleClass="form-label" text="Mật khẩu:"/>
            <PasswordField fx:id="matKhauField" styleClass="password-field" promptText="Nhập mật khẩu"/>
        </VBox>

        <VBox alignment="CENTER" spacing="5.0">
            <Button fx:id="dangNhapBtn" mnemonicParsing="false" styleClass="login-button"
                    text="ĐĂNG NHẬP"/>
        </VBox>
        
        <Label fx:id="thongBaoLabel" styleClass="error-label"/>
    </VBox>

    <!-- Footer -->
    <VBox alignment="CENTER" spacing="5.0">
        <Label styleClass="footer-text" text="© 2024 Louis Hotel Management System"/>
        <Label styleClass="footer-version" text="Phiên bản 1.0"/>
    </VBox>
</VBox>
