<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<BorderPane prefHeight="1000.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/22"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.louishotelmanagement.controller.DangNhapController"
            stylesheets="@../css/dang-nhap.css">

    <!-- Header Section -->
    <top>
        <VBox alignment="CENTER" prefHeight="200.0" BorderPane.alignment="CENTER"
              styleClass="header-background">
            <!-- Logo/Icon -->
            <VBox alignment="CENTER" spacing="15.0">
                <ImageView fitHeight="80.0" fitWidth="80.0" preserveRatio="true">
                    <Image url="@../image/hotel.png"/>
                </ImageView>

                <VBox alignment="CENTER" spacing="5.0">
                    <Label styleClass="brand-title" text="LOUIS HOTEL"/>
                    <Label styleClass="brand-subtitle" text="MANAGEMENT SYSTEM"/>
                </VBox>
            </VBox>
        </VBox>
    </top>

    <!-- Center Content -->
    <center>
        <VBox alignment="CENTER" spacing="30.0" BorderPane.alignment="CENTER"
              styleClass="center-background">
            <children>
                <!-- Welcome Text -->
                <VBox alignment="CENTER" spacing="8.0">
                    <children>
                        <Label styleClass="welcome-title" text="Chào mừng trở lại"/>
                        <Label styleClass="welcome-subtitle" text="Vui lòng đăng nhập để tiếp tục"/>
                    </children>
                </VBox>

                <!-- Login Form Card -->
                <VBox spacing="20.0" styleClass="login-card">
                    <children>
                        <!-- Username Field -->
                        <VBox spacing="8.0" styleClass="input-group">
                            <children>
                                <Label styleClass="input-label" text="Tên đăng nhập"/>
                                <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="input-container">
                                    <children>
                                        <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                                            <image>
                                                <Image url="@../image/profile.png"/>
                                            </image>
                                        </ImageView>
                                        <TextField fx:id="tenDangNhapField" styleClass="modern-text-field"
                                                   promptText="Nhập tên đăng nhập" prefWidth="280.0"/>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>

                        <!-- Password Field -->
                        <VBox spacing="8.0" styleClass="input-group">
                            <children>
                                <Label styleClass="input-label" text="Mật khẩu"/>
                                <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="input-container">
                                    <children>
                                        <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                                            <image>
                                                <Image url="@../image/hotel_key.png"/>
                                            </image>
                                        </ImageView>
                                        <PasswordField fx:id="matKhauField" styleClass="modern-password-field"
                                                       promptText="Nhập mật khẩu" prefWidth="280.0"/>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>

                        <!-- Login Button -->
                        <VBox alignment="CENTER" spacing="15.0">
                            <children>
                                <Button fx:id="dangNhapBtn" styleClass="modern-login-button" text="ĐĂNG NHẬP"/>
                                <Label fx:id="thongBaoLabel" styleClass="error-message"/>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </center>

    <!-- Footer -->
    <bottom>
        <VBox alignment="CENTER" spacing="8.0" BorderPane.alignment="CENTER"
              styleClass="footer-background">
            <children>
                <Label styleClass="footer-text" text="© 2025 Louis Hotel Management System"/>
                <Label styleClass="footer-version" text="Phiên bản 2.0"/>
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Label styleClass="footer-link" text="Bảo mật"/>
                        <Label styleClass="footer-link" text="Điều khoản"/>
                        <Label styleClass="footer-link" text="Hỗ trợ"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </bottom>
</BorderPane>
