<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>
<BorderPane fx:id="rootPane" prefHeight="864.0" prefWidth="1236.0" xmlns="http://javafx.com/javafx/24"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.louishotelmanagement.controller.QuanLyDichVuController">
    <center>
        <VBox alignment="TOP_CENTER" prefHeight="800.0" prefWidth="950.0" spacing="32.0" VBox.vgrow="ALWAYS">
            <children>

                <GridPane alignment="TOP_CENTER" hgap="20" prefHeight="100.0" prefWidth="890.0" HBox.hgrow="ALWAYS"
                          VBox.vgrow="NEVER">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="25"/>
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="25"/>
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="25"/>
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="25"/>
                    </columnConstraints>

                    <rowConstraints>
                        <RowConstraints maxHeight="100.0" minHeight="100" prefHeight="120" valignment="TOP"
                                        vgrow="ALWAYS"/>
                    </rowConstraints>

                    <children>
                        <!-- Ô 1: Số Dịch Vụ -->
                        <VBox styleClass="stat-box" GridPane.columnIndex="0" GridPane.hgrow="ALWAYS">
                            <HBox alignment="CENTER_LEFT" spacing="15">
                                <VBox alignment="CENTER_LEFT" spacing="10" HBox.hgrow="ALWAYS">
                                    <Label styleClass="stat-title" text="Số dịch vụ"/>
                                    <Label fx:id="lblTongSoDichVu" styleClass="stat-number" text="69"/>
                                </VBox>
                                <ImageView fitHeight="45" fitWidth="45" preserveRatio="true">
                                    <image>
                                        <Image url="@../image/receipt.png"/>
                                    </image>
                                </ImageView>
                            </HBox>
                        </VBox>

                        <!-- Ô 2: Đang kinh doanh -->
                        <VBox styleClass="stat-box" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS">
                            <HBox alignment="CENTER_LEFT" spacing="15">
                                <VBox alignment="CENTER_LEFT" spacing="15" HBox.hgrow="ALWAYS">
                                    <Label styleClass="stat-title" text="Đang kinh doanh"/>
                                    <Label fx:id="lblSoDichVuConKinhDoanh" styleClass="stat-number" text="15"/>
                                </VBox>
                                <ImageView fitHeight="45" fitWidth="45" preserveRatio="true">
                                    <image>
                                        <Image url="@../image/green-circle.png"/>
                                    </image>
                                </ImageView>
                            </HBox>
                        </VBox>

                        <!-- Ô 3: Doanh thu ngày -->
                        <VBox styleClass="stat-box" GridPane.columnIndex="2" GridPane.hgrow="ALWAYS">
                            <HBox alignment="CENTER_LEFT" spacing="15">
                                <VBox alignment="CENTER_LEFT" spacing="15" HBox.hgrow="ALWAYS">
                                    <Label styleClass="stat-title" text="Doanh thu ngày"/>
                                    <Label fx:id="lblCheckOut" styleClass="stat-number" text="14"/>
                                </VBox>
                                <ImageView fitHeight="45" fitWidth="45" preserveRatio="true">
                                    <image>
                                        <Image url="@../image/money-bag.png"/>
                                    </image>
                                </ImageView>
                            </HBox>
                        </VBox>

                        <!-- Ô 4: Doanh thu tháng -->
                        <VBox styleClass="stat-box" GridPane.columnIndex="3" GridPane.hgrow="ALWAYS">
                            <HBox alignment="CENTER_LEFT" spacing="15">
                                <VBox alignment="CENTER_LEFT" spacing="15" HBox.hgrow="ALWAYS">
                                    <Label styleClass="stat-title" text="Doanh thu tháng"/>
                                    <Label fx:id="lblKhachVIP" styleClass="stat-number" text="10"/>
                                </VBox>
                                <ImageView fitHeight="45" fitWidth="45" preserveRatio="true">
                                    <image>
                                        <Image url="@../image/bar-chart.png"/>
                                    </image>
                                </ImageView>
                            </HBox>
                        </VBox>
                    </children>
                </GridPane>

                <HBox alignment="CENTER_LEFT" spacing="15.0" HBox.hgrow="ALWAYS">
                    <children>
                        <TextField fx:id="txtTimKiem" maxWidth="Infinity" prefHeight="41.0" prefWidth="200.0"
                                   promptText="Tìm kiếm thông tin dịch vụ..."
                                   style="-fx-border-color: #B0C4DE; -fx-border-radius: 15; -fx-background-radius: 15;"
                                   styleClass="form-field" HBox.hgrow="ALWAYS"/>

                        <ComboBox fx:id="cbTrangThaiKinhDoanh" maxWidth="Infinity" prefHeight="41.0" prefWidth="150.0"
                                  promptText="Tất cả trạng thái"
                                  style="-fx-background-radius: 15; -fx-background-color: #F5F9FF; -fx-border-color: #B0C4DE; -fx-border-radius: 15;"
                                  styleClass="hover-effect" HBox.hgrow="ALWAYS"/>

                        <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#handleLamMoi" prefHeight="37.0"
                                prefWidth="150.0" styleClass="btn-lam-moi" text="🔄 Làm Mới" HBox.hgrow="ALWAYS">
                            <font>
                                <Font name="System Bold" size="12.0"/>
                            </font>
                        </Button>
                    </children>
                </HBox>

                <VBox prefHeight="561.0" prefWidth="890.0" styleClass="table-container" HBox.hgrow="ALWAYS"
                      VBox.vgrow="ALWAYS">
                    <children>
                        <TableView fx:id="tableViewDichVu" VBox.vgrow="ALWAYS">
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                            <columns>
                                <TableColumn fx:id="colMaDV" prefWidth="79.0" text="Mã Dịch Vụ"/>
                                <TableColumn fx:id="colTenDV" prefWidth="121.0" text="Tên Dịch Vụ"/>
                                <TableColumn fx:id="colSoLuong" prefWidth="78.0" text="Số Lượng"/>
                                <TableColumn fx:id="colDonGia" prefWidth="89.0" text="Đơn Giá"/>
                                <TableColumn fx:id="colMoTa" prefWidth="205.0" text="Mô Tả"/>
                                <TableColumn fx:id="colTrangThai" prefWidth="95.0" text="Trạng Thái"/>
                                <TableColumn fx:id="colThaoTac" prefWidth="203.0" text="Thao tác"/>
                            </columns>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                        </TableView>
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets top="32.0"/>
            </padding>
        </VBox>
    </center>
    <padding>
        <Insets bottom="32.0" left="32.0" right="32.0" top="32.0"/>
    </padding>
    <top>
        <GridPane prefHeight="75.0" prefWidth="1086.0" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <HBox spacing="16.0">
                <ImageView fitHeight="72.0" fitWidth="73.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../image/client.png"/>
                </ImageView>
                <VBox prefHeight="58.0" prefWidth="798.0" HBox.hgrow="ALWAYS">
                    <Label styleClass="main-header" text="Quản Lý Dịch Vụ"/>
                    <Label prefHeight="20.0" prefWidth="450.0" styleClass="main-subtitle"
                           text="Quản lý thông tin và trạng thái của dịch vụ trong khách sạn"/>
                </VBox>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="5.0" GridPane.columnIndex="1">
                <Button fx:id="btnThemDichVu" mnemonicParsing="false" onAction="#handleThemDichVu" prefHeight="37.0"
                        prefWidth="144.0" styleClass="btn-them" text="➕ Thêm Dịch Vụ">
                    <font>
                        <Font name="System Bold" size="12.0"/>
                    </font>
                </Button>
            </HBox>
        </GridPane>
    </top>
    <stylesheets>
        <URL value="@../css/main.css"/>
        <URL value="@../css/quan-ly-dich-vu.css"/>
    </stylesheets>
</BorderPane>
