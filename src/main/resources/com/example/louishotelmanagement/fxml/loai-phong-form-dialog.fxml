<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.louishotelmanagement.controller.LoaiPhongDialogController">
    <center>
        <VBox spacing="20.0" style="-fx-background-color: #f8f9fa; -fx-padding: 30;">
            <!-- Header -->
            <VBox spacing="5.0">
                <Label fx:id="lblTieuDe" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Thêm Loại Phòng Mới"
                       textFill="#2c3e50"/>
                <Label style="-fx-font-size: 14px;" text="Nhập thông tin loại phòng" textFill="#7f8c8d"/>
            </VBox>

            <!-- Form using FormsFX -->
            <VBox fx:id="formContainer" prefHeight="240.0" prefWidth="489.0"/>

            <!-- Buttons -->
            <HBox alignment="CENTER_RIGHT" spacing="15.0">
                <Button fx:id="btnHuy" onAction="#handleHuy"
                        style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10 20;"
                        text="Hủy"/>
                <Button fx:id="btnLuu" onAction="#handleLuu"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10 20;"
                        text="Lưu"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
