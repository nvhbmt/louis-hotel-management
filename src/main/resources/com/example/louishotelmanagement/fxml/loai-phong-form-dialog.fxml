<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="202.0" prefWidth="602.0" stylesheets="@../css/formsfx.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.louishotelmanagement.controller.LoaiPhongDialogController">
    <center>
        <VBox prefHeight="138.0" prefWidth="369.0" spacing="20.0" styleClass="dialog-container">
            <!-- Header -->
            <VBox styleClass="dialog-header">
                <Label fx:id="lblTieuDe" styleClass="dialog-title" text="Thêm Loại Phòng Mới" />
                <Label styleClass="dialog-subtitle" text="Nhập thông tin loại phòng" />
            </VBox>

            <!-- Form using FormsFX -->
            <VBox fx:id="formContainer" />

            <!-- Buttons -->
            <HBox prefHeight="36.0" prefWidth="2538.0" styleClass="dialog-buttons">
                <Button fx:id="btnHuy" onAction="#handleHuy" styleClass="btn-cancel" text="Hủy" />
                <Button fx:id="btnLuu" onAction="#handleLuu" styleClass="btn-save" text="Lưu" />
            </HBox>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
         </padding>
        </VBox>
    </center>
   <padding>
      <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
   </padding>
</BorderPane>
