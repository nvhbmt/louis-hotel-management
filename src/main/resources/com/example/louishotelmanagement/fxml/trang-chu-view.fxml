<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="864.0" prefWidth="1014.4" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.louishotelmanagement.controller.TrangChuController"
            stylesheets="@../css/trang-chu.css">

    <!-- Header Section -->
    <top>
        <VBox alignment="CENTER" prefHeight="120.0" BorderPane.alignment="CENTER"
              style="-fx-background-color: linear-gradient(to right, #667eea 0%, #764ba2 100%); -fx-padding: 20;">
            <children>
                <VBox alignment="CENTER" spacing="8.0">
                    <children>
                        <Label styleClass="brand-title" text="LOUIS HOTEL"/>
                        <Label styleClass="brand-subtitle" text="MANAGEMENT SYSTEM"/>
                    </children>
                </VBox>
            </children>
        </VBox>
    </top>

    <!-- Center Content -->
    <center>
        <VBox alignment="CENTER" spacing="40.0" BorderPane.alignment="CENTER"
              style="-fx-background-color: #f8f9fa;">
            <children>
                <!-- Welcome Section -->
                <VBox alignment="CENTER" spacing="15.0" style="-fx-padding: 20;">
                    <children>
                        <Label styleClass="welcome-main-title" text="Chào mừng đến với hệ thống"/>
                        <Label styleClass="welcome-subtitle" text="Quản lý khách sạn thông minh và hiệu quả"/>
                        <Label styleClass="welcome-description" text="Tối ưu hóa quy trình vận hành, nâng cao trải nghiệm khách hàng và theo dõi hiệu suất theo thời gian thực."
                               wrapText="true" maxWidth="600" textAlignment="CENTER"/>
                    </children>
                </VBox>

                <!-- Feature Cards Grid -->
                <GridPane hgap="30" vgap="30" alignment="CENTER" style="-fx-padding: 20;">
                    <children>
                        <!-- Room Management Card -->
                        <VBox styleClass="feature-card" GridPane.columnIndex="0" GridPane.rowIndex="0">
                            <children>
                                <VBox alignment="CENTER" spacing="15.0" styleClass="card-content">
                                    <children>
                                        <ImageView fitHeight="60.0" fitWidth="60.0" preserveRatio="true">
                                            <image>
                                                <Image url="@../image/hotel.png"/>
                                            </image>
                                        </ImageView>
                                        <VBox alignment="CENTER" spacing="8.0">
                                            <children>
                                                <Label styleClass="card-title" text="Quản Lý Phòng"/>
                                                <Label styleClass="card-description" text="Đặt phòng, check-in/out, quản lý trạng thái phòng"
                                                       wrapText="true" textAlignment="CENTER"/>
                                            </children>
                                        </VBox>
                                        <Button styleClass="card-button" text="Truy cập" onAction="#moQuanLyPhong"/>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>

                        <!-- Customer Management Card -->
                        <VBox styleClass="feature-card" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <children>
                                <VBox alignment="CENTER" spacing="15.0" styleClass="card-content">
                                    <children>
                                        <ImageView fitHeight="60.0" fitWidth="60.0" preserveRatio="true">
                                            <image>
                                                <Image url="@../image/people.png"/>
                                            </image>
                                        </ImageView>
                                        <VBox alignment="CENTER" spacing="8.0">
                                            <children>
                                                <Label styleClass="card-title" text="Khách Hàng"/>
                                                <Label styleClass="card-description" text="Quản lý thông tin khách hàng, lịch sử đặt phòng"
                                                       wrapText="true" textAlignment="CENTER"/>
                                            </children>
                                        </VBox>
                                        <Button styleClass="card-button" text="Truy cập" onAction="#moQuanLyKhachHang"/>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>

                        <!-- Services Management Card -->
                        <VBox styleClass="feature-card" GridPane.columnIndex="0" GridPane.rowIndex="1">
                            <children>
                                <VBox alignment="CENTER" spacing="15.0" styleClass="card-content">
                                    <children>
                                        <ImageView fitHeight="60.0" fitWidth="60.0" preserveRatio="true">
                                            <image>
                                                <Image url="@../image/dining-table.png"/>
                                            </image>
                                        </ImageView>
                                        <VBox alignment="CENTER" spacing="8.0">
                                            <children>
                                                <Label styleClass="card-title" text="Dịch Vụ"/>
                                                <Label styleClass="card-description" text="Quản lý dịch vụ, đặt dịch vụ cho khách hàng"
                                                       wrapText="true" textAlignment="CENTER"/>
                                            </children>
                                        </VBox>
                                        <Button styleClass="card-button" text="Truy cập" onAction="#moQuanLyDichVu"/>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>

                        <!-- Statistics Card -->
                        <VBox styleClass="feature-card" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <children>
                                <VBox alignment="CENTER" spacing="15.0" styleClass="card-content">
                                    <children>
                                        <ImageView fitHeight="60.0" fitWidth="60.0" preserveRatio="true">
                                            <image>
                                                <Image url="@../image/bar-chart.png"/>
                                            </image>
                                        </ImageView>
                                        <VBox alignment="CENTER" spacing="8.0">
                                            <children>
                                                <Label styleClass="card-title" text="Thống Kê"/>
                                                <Label styleClass="card-description" text="Báo cáo doanh thu, hiệu suất và xu hướng"
                                                       wrapText="true" textAlignment="CENTER"/>
                                            </children>
                                        </VBox>
                                        <Button styleClass="card-button" text="Truy cập" onAction="#moThongKe"/>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                    </children>
                </GridPane>

                <!-- Quick Actions -->
                <VBox alignment="CENTER" spacing="15.0" style="-fx-padding: 20;">
                    <children>
                        <Label styleClass="quick-actions-title" text="Hành động nhanh"/>
                        <HBox alignment="CENTER" spacing="20.0">
                            <children>
                                <Button styleClass="quick-action-button" text="Đặt phòng mới" onAction="#moDatPhong"/>
                                <Button styleClass="quick-action-button secondary" text="Check-in" onAction="#moNhanPhong"/>
                                <Button styleClass="quick-action-button secondary" text="Check-out" onAction="#moTraPhong"/>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </center>

    <!-- Footer -->
    <bottom>
        <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER"
              style="-fx-background-color: #ffffff; -fx-padding: 20 0 20 0; -fx-border-color: #e9ecef; -fx-border-width: 1 0 0 0;">
            <children>
                <Label styleClass="footer-text" text="© 2025 Louis Hotel Management System"/>
                <Label styleClass="footer-version" text="Phiên bản 2.0 - Được thiết kế để tối ưu hóa trải nghiệm người dùng"/>
            </children>
        </VBox>
    </bottom>
</BorderPane>
