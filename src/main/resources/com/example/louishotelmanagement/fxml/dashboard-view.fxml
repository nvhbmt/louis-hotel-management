<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane fx:id="mainBorderPane" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.louishotelmanagement.controller.DashboardController">
   <left>
      <!-- Sidebar -->
      <VBox prefWidth="250.0" style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-width: 0 1 0 0;">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         
         <!-- Logo Section -->
         <VBox alignment="CENTER" spacing="10.0">
            <Circle radius="30.0" fill="#3498db" stroke="#2c3e50" strokeWidth="2.0" />
            <Label text="VICTORIA HOTEL" textFill="#2c3e50" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
         </VBox>
         
         <Separator style="-fx-background-color: #e0e0e0;" />
         
         <!-- Menu Section -->
         <VBox spacing="5.0" style="-fx-padding: 20 0 0 0;">
            <Label text="Menu" textFill="#666666" style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-padding: 0 0 10 0;" />
            
            <!-- Menu Items -->
            <VBox spacing="2.0">
               <!-- Tổng Quan -->
               <Button fx:id="nutTongQuan" alignment="BASELINE_LEFT" graphicTextGap="15.0" maxWidth="Infinity" mnemonicParsing="false" onAction="#khiNhanTongQuan" prefHeight="40.0" style="-fx-background-color: transparent; -fx-text-fill: #333333; -fx-font-size: 14px; -fx-cursor: hand; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 8 12;" text="🏠 Tổng Quan" />
               
               <!-- Quản lí phòng - Expandable Menu -->
               <VBox spacing="2.0">
                  <Button fx:id="nutQuanLyPhong" alignment="BASELINE_LEFT" graphicTextGap="15.0" maxWidth="Infinity" mnemonicParsing="false" onAction="#khiChuyenQuanLyPhong" prefHeight="40.0" style="-fx-background-color: transparent; -fx-text-fill: #333333; -fx-font-size: 14px; -fx-cursor: hand; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 8 12;" text="🛏️ Quản lí phòng" />
                  <!-- Submenu -->
                  <VBox fx:id="menuConPhong" spacing="1.0" style="-fx-padding: 0 0 0 30;" visible="false" managed="false">
                     <Button fx:id="nutDanhSachPhong" alignment="BASELINE_LEFT" graphicTextGap="10.0" maxWidth="Infinity" mnemonicParsing="false" onAction="#khiNhanDanhSachPhong" prefHeight="35.0" style="-fx-background-color: transparent; -fx-text-fill: #666666; -fx-font-size: 13px; -fx-cursor: hand; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 6 10;" text="📋 Danh sách phòng" />
                     <Button fx:id="nutLoaiPhong" alignment="BASELINE_LEFT" graphicTextGap="10.0" maxWidth="Infinity" mnemonicParsing="false" onAction="#khiNhanLoaiPhong" prefHeight="35.0" style="-fx-background-color: transparent; -fx-text-fill: #666666; -fx-font-size: 13px; -fx-cursor: hand; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 6 10;" text="🏷️ Loại phòng" />
                     <Button fx:id="nutTrangThaiPhong" alignment="BASELINE_LEFT" graphicTextGap="10.0" maxWidth="Infinity" mnemonicParsing="false" onAction="#khiNhanTrangThaiPhong" prefHeight="35.0" style="-fx-background-color: transparent; -fx-text-fill: #666666; -fx-font-size: 13px; -fx-cursor: hand; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 6 10;" text="📊 Trạng thái phòng" />
                  </VBox>
               </VBox>
               
               <!-- Quản lí dịch vụ - Expandable Menu -->
               <VBox spacing="2.0">
                  <Button fx:id="nutQuanLyDichVu" alignment="BASELINE_LEFT" graphicTextGap="15.0" maxWidth="Infinity" mnemonicParsing="false" onAction="#khiChuyenQuanLyDichVu" prefHeight="40.0" style="-fx-background-color: transparent; -fx-text-fill: #333333; -fx-font-size: 14px; -fx-cursor: hand; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 8 12;" text="🍽️ Quản lí dịch vụ" />
                  <!-- Submenu -->
                  <VBox fx:id="menuConDichVu" spacing="1.0" style="-fx-padding: 0 0 0 30;" visible="false" managed="false">
                     <Button fx:id="nutDanhSachDichVu" alignment="BASELINE_LEFT" graphicTextGap="10.0" maxWidth="Infinity" mnemonicParsing="false" onAction="#khiNhanDanhSachDichVu" prefHeight="35.0" style="-fx-background-color: transparent; -fx-text-fill: #666666; -fx-font-size: 13px; -fx-cursor: hand; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 6 10;" text="📋 Danh sách dịch vụ" />
                     <Button fx:id="nutDanhMucDichVu" alignment="BASELINE_LEFT" graphicTextGap="10.0" maxWidth="Infinity" mnemonicParsing="false" onAction="#khiNhanDanhMucDichVu" prefHeight="35.0" style="-fx-background-color: transparent; -fx-text-fill: #666666; -fx-font-size: 13px; -fx-cursor: hand; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 6 10;" text="🏷️ Danh mục dịch vụ" />
                     <Button fx:id="nutDatDichVu" alignment="BASELINE_LEFT" graphicTextGap="10.0" maxWidth="Infinity" mnemonicParsing="false" onAction="#khiNhanDatDichVu" prefHeight="35.0" style="-fx-background-color: transparent; -fx-text-fill: #666666; -fx-font-size: 13px; -fx-cursor: hand; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 6 10;" text="📅 Đặt dịch vụ" />
                  </VBox>
               </VBox>
               
               <Button fx:id="nutQuanLyGiamGia" alignment="BASELINE_LEFT" graphicTextGap="15.0" maxWidth="Infinity" mnemonicParsing="false" onAction="#khiNhanQuanLyGiamGia" prefHeight="40.0" style="-fx-background-color: transparent; -fx-text-fill: #333333; -fx-font-size: 14px; -fx-cursor: hand; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 8 12;" text="💰 Quản lí giảm giá" />
               
               <!-- Quản lí nhân viên - Expandable Menu -->
               <VBox spacing="2.0">
                  <Button fx:id="nutQuanLyNhanVien" alignment="BASELINE_LEFT" graphicTextGap="15.0" maxWidth="Infinity" mnemonicParsing="false" onAction="#khiChuyenQuanLyNhanVien" prefHeight="40.0" style="-fx-background-color: transparent; -fx-text-fill: #333333; -fx-font-size: 14px; -fx-cursor: hand; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 8 12;" text="👥 Quản lí nhân viên" />
                  <!-- Submenu -->
                  <VBox fx:id="menuConNhanVien" spacing="1.0" style="-fx-padding: 0 0 0 30;" visible="false" managed="false">
                     <Button fx:id="nutDanhSachNhanVien" alignment="BASELINE_LEFT" graphicTextGap="10.0" maxWidth="Infinity" mnemonicParsing="false" onAction="#khiNhanDanhSachNhanVien" prefHeight="35.0" style="-fx-background-color: transparent; -fx-text-fill: #666666; -fx-font-size: 13px; -fx-cursor: hand; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 6 10;" text="📋 Danh sách nhân viên" />
                     <Button fx:id="nutLichLamViec" alignment="BASELINE_LEFT" graphicTextGap="10.0" maxWidth="Infinity" mnemonicParsing="false" onAction="#khiNhanLichLamViec" prefHeight="35.0" style="-fx-background-color: transparent; -fx-text-fill: #666666; -fx-font-size: 13px; -fx-cursor: hand; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 6 10;" text="📅 Lịch làm việc" />
                     <Button fx:id="nutLuongThuong" alignment="BASELINE_LEFT" graphicTextGap="10.0" maxWidth="Infinity" mnemonicParsing="false" onAction="#khiNhanLuongThuong" prefHeight="35.0" style="-fx-background-color: transparent; -fx-text-fill: #666666; -fx-font-size: 13px; -fx-cursor: hand; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 6 10;" text="💵 Lương thưởng" />
                  </VBox>
               </VBox>
               
               <Button fx:id="nutQuanLyTaiKhoan" alignment="BASELINE_LEFT" graphicTextGap="15.0" maxWidth="Infinity" mnemonicParsing="false" onAction="#khiNhanQuanLyTaiKhoan" prefHeight="40.0" style="-fx-background-color: transparent; -fx-text-fill: #333333; -fx-font-size: 14px; -fx-cursor: hand; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 8 12;" text="👤 Quản lí tài khoản" />
               
               <Button fx:id="nutQuanLyKhachHang" alignment="BASELINE_LEFT" graphicTextGap="15.0" maxWidth="Infinity" mnemonicParsing="false" onAction="#khiNhanQuanLyKhachHang" prefHeight="40.0" style="-fx-background-color: #e3f2fd; -fx-text-fill: #1976d2; -fx-font-size: 14px; -fx-cursor: hand; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 8 12; -fx-border-color: #1976d2; -fx-border-width: 1;" text="👥 Quản lí khách hàng" />
               
               <Button fx:id="nutThongKe" alignment="BASELINE_LEFT" graphicTextGap="15.0" maxWidth="Infinity" mnemonicParsing="false" onAction="#khiNhanThongKe" prefHeight="40.0" style="-fx-background-color: transparent; -fx-text-fill: #333333; -fx-font-size: 14px; -fx-cursor: hand; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 8 12;" text="📊 Thống kê" />
            </VBox>
         </VBox>
      </VBox>
   </left>
   
   <center>
      <!-- Main Content Area -->
      <VBox spacing="20.0" style="-fx-background-color: #f8f9fa; -fx-padding: 30;">
         <!-- Header -->
         <VBox spacing="5.0">
            <Label text="Thống kê" style="-fx-font-size: 28px; -fx-font-weight: bold;" textFill="#2c3e50" />
            <Label text="Xem tổng quan về hiệu suất kinh doanh khách sạn" style="-fx-font-size: 14px;" textFill="#7f8c8d" />
         </VBox>
         
         <!-- Statistics Cards -->
         <HBox spacing="20.0">
            <!-- Card 1: Total Customers -->
            <VBox alignment="CENTER" prefHeight="120.0" prefWidth="200.0" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-padding: 20;">
               <Label text="Tổng khách hàng tháng này" style="-fx-font-size: 12px;" textFill="#7f8c8d" />
               <Label text="120" style="-fx-font-size: 32px; -fx-font-weight: bold;" textFill="#2c3e50" />
               <Label text="Khách hàng" style="-fx-font-size: 12px;" textFill="#7f8c8d" />
            </VBox>
            
            <!-- Card 2: Most Used Service -->
            <VBox alignment="CENTER" prefHeight="120.0" prefWidth="200.0" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-padding: 20;">
               <Label text="Dịch vụ được sử dụng nhiều nhất" style="-fx-font-size: 12px;" textFill="#7f8c8d" />
               <Label text="Pickle ball" style="-fx-font-size: 24px; -fx-font-weight: bold;" textFill="#2c3e50" />
               <Label text="42% tổng số đặt dịch vụ" style="-fx-font-size: 12px;" textFill="#7f8c8d" />
            </VBox>
            
            <!-- Card 3: Highest Revenue Month -->
            <VBox alignment="CENTER" prefHeight="120.0" prefWidth="200.0" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-padding: 20;">
               <Label text="Tháng có doanh thu cao nhất trong năm" style="-fx-font-size: 12px;" textFill="#7f8c8d" />
               <Label text="67.5 M VND" style="-fx-font-size: 24px; -fx-font-weight: bold;" textFill="#2c3e50" />
               <Label text="03/2025" style="-fx-font-size: 12px;" textFill="#7f8c8d" />
            </VBox>
         </HBox>
         
         <!-- Charts Section -->
         <HBox spacing="20.0" prefHeight="400.0">
            <!-- Revenue Chart -->
            <VBox spacing="15.0" prefWidth="500.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-padding: 20;">
               <HBox alignment="CENTER_LEFT" spacing="20.0">
                  <Label text="Doanh thu" style="-fx-font-size: 18px; -fx-font-weight: bold;" textFill="#2c3e50" />
                  <Region HBox.hgrow="ALWAYS" />
                  <!-- Chart Controls -->
                  <HBox spacing="5.0">
                     <ToggleButton fx:id="nutChuyenTuan" mnemonicParsing="false" onAction="#khiChuyenTuan" text="Tuần" />
                     <ToggleButton fx:id="nutChuyenThang" mnemonicParsing="false" onAction="#khiChuyenThang" text="Tháng" />
                     <ToggleButton fx:id="nutChuyenNam" mnemonicParsing="false" onAction="#khiChuyenNam" selected="true" text="Năm" />
                  </HBox>
                  <HBox spacing="5.0">
                     <ToggleButton fx:id="nutChuyenVnd" mnemonicParsing="false" onAction="#khiChuyenVnd" selected="true" text="VND" />
                     <ToggleButton fx:id="nutChuyenUsd" mnemonicParsing="false" onAction="#khiChuyenUsd" text="USD" />
                  </HBox>
               </HBox>
               
               <!-- Placeholder for Chart -->
               <VBox alignment="CENTER" prefHeight="300.0" style="-fx-background-color: #f8f9fa; -fx-background-radius: 5; -fx-border-color: #e9ecef; -fx-border-radius: 5;">
                  <Label text="📊 Biểu đồ doanh thu sẽ được hiển thị ở đây" style="-fx-font-size: 14px;" textFill="#6c757d" />
                  <Label text="(T1-T12: 0-100M VND)" style="-fx-font-size: 12px;" textFill="#6c757d" />
               </VBox>
               
               <!-- Legend -->
               <HBox alignment="CENTER" spacing="10.0">
                  <Rectangle fill="#27ae60" height="15.0" width="15.0" />
                  <Label text="Doanh thu" style="-fx-font-size: 12px;" textFill="#2c3e50" />
               </HBox>
            </VBox>
            
            <!-- Room Status Chart -->
            <VBox spacing="15.0" prefWidth="300.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-padding: 20;">
               <Label text="Trạng thái phòng" style="-fx-font-size: 18px; -fx-font-weight: bold;" textFill="#2c3e50" />
               
               <!-- Placeholder for Pie Chart -->
               <VBox alignment="CENTER" prefHeight="200.0" style="-fx-background-color: #f8f9fa; -fx-background-radius: 5; -fx-border-color: #e9ecef; -fx-border-radius: 5;">
                  <Label text="🥧 Biểu đồ trạng thái phòng" style="-fx-font-size: 14px;" textFill="#6c757d" />
                  <Label text="(Đã đặt: 55%, Còn trống: 35%, Bảo trì: 10%)" style="-fx-font-size: 12px;" textFill="#6c757d" />
               </VBox>
               
               <!-- Legend -->
               <VBox spacing="8.0">
                  <HBox spacing="10.0">
                     <Rectangle fill="#f39c12" height="12.0" width="12.0" />
                     <Label text="Còn trống" style="-fx-font-size: 12px;" textFill="#2c3e50" />
                  </HBox>
                  <HBox spacing="10.0">
                     <Rectangle fill="#3498db" height="12.0" width="12.0" />
                     <Label text="Đã đặt" style="-fx-font-size: 12px;" textFill="#2c3e50" />
                  </HBox>
                  <HBox spacing="10.0">
                     <Rectangle fill="#9b59b6" height="12.0" width="12.0" />
                     <Label text="Bảo trì" style="-fx-font-size: 12px;" textFill="#2c3e50" />
                  </HBox>
               </VBox>
            </VBox>
         </HBox>
      </VBox>
   </center>
</BorderPane>
